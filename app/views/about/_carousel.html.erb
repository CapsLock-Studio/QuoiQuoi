<div class="carousel slide carousel-v1" id="myCarousel-1">
  <div class="carousel-inner">
    <% @introduce_image_slides.each_with_index do |introduce_image_slide, index| %>
      <div class="item <%= 'active' if index == 0 %>">
        <%= link_to introduce_image_slide.image.url(:large), target: '_blank' do %>
          <%= image_tag introduce_image_slide.image.url(:medium), class: 'img-responsive', style: 'width:100%;' %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="carousel-arrow">
    <a data-slide="prev" href="#myCarousel-1" class="left carousel-control">
      <i class="icon-angle-left"></i>
    </a>
    <a data-slide="next" href="#myCarousel-1" class="right carousel-control">
      <i class="icon-angle-right"></i>
    </a>
  </div>
</div>