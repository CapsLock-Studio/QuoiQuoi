<div class="container">
  <div class="row">
    <!--Reg Block-->
    <div class="col-md-6 col-md-offset-3" style="margin-top:40px;">
      <div class="reg-page" style="border-top:none;">
        <div class="reg-header">
          <div class="text-center">
            <h2><i class="icon-key"></i>設定密碼</h2>
            <p>定期更新密碼能讓你的個人帳號更為安全</p>
          </div>
        </div>

        <%= form_for @user, url: update_password_path, html: {class: 'form-horizontal validate-form'} do |f| %>
          <div class="form-group">
            <%= f.label :current_password, '舊密碼', class: 'text-muted col-xs-2 control-label' %>
            <div class="col-xs-10">
              <%= f.password_field :current_password, class: 'col-xs-10 form-control', placeholder: '請輸入舊密碼' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, '新密碼', class: 'text-muted col-xs-2 control-label' %>
            <div class="col-xs-10">
              <%= f.password_field :password, class: 'col-xs-10 form-control', placeholder: '請輸入新密碼', autocomplete: 'off' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, '確認密碼', class: 'text-muted col-xs-2 control-label' %>
            <div class="controls col-xs-10">
              <%= f.password_field :password_confirmation, class: 'col-xs-10 form-control', placeholder: '再次確認密碼', autocomplete: 'off' %>
            </div>
          </div>
          <%= render 'layouts/messages', resource: @user %>
          <%= f.button '更新密碼', class: 'btn btn-default btn-lg hover-effect btn-block', type: 'submit' %>
          <%= link_to '取消', user_path %>
        <% end %>
      </div>
    </div>
    <!--End Reg Block-->
  </div>
</div>