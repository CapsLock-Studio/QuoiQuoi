<div id="signin-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body" style="padding-top: 0;">
        <div class="row">
          <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12">
            <div class="social-signin">
              <div class="text-center">
                <h3>
                  <%= t('sign_or_create') %><br/>
                  <small><%= t('just_two_steps') %></small>
                </h3>
              </div>
              <%= link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-google btn-block social-btn' do %>
                <i class="fa fa-google fa-fw"></i>
                <%= t('sign_in_with_google') %>
              <% end %>
              <%= link_to user_omniauth_authorize_path(:facebook), class: 'btn btn-fb btn-block social-btn' do %>
                <i class="fa fa-facebook fa-fw"></i>
                <%= t('sign_in_with_fb') %>
              <% end %>
            </div>
            <div class="user-email-form" style="display:none;">
              <div class="text-center">
                <h3>
                  <%= t('check_signin_mail_hint') %>
                </h3>
                <input type="text" class="form-control" name="email" placeholder="yourname@example.com" />
              </div>
            </div>
          </div>
          <div class="col-xs-12 text-center user-email-sent" style="display:none;">
            <h3>
              <i class="fa fa-envelope-o fa-fw"></i>
              <%= t('check_signin_mail') %>
            </h3>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-link btn-block social-signin" id="email-signin-btn"><%= t('use_email_sign_in') %></button>
        <div class="user-email-form text-center" style="display:none;">
          <a class="btn text-muted" data-dismiss="modal"><%= t('cancel') %></a>
          <button data-url="<%= email_authencate_path %>" type="submit" class="btn btn-default"><%= t('signin') %></button>
        </div>
        <a class="btn text-muted btn-block user-email-sent" style="display: none;" data-dismiss="modal"><%= t('close') %></a>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->