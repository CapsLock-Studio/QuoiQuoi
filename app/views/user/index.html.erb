<div class="container">
  <div class="row">
    <!--Reg Block-->
    <div class="col-md-6 col-md-offset-3" style="margin-top:40px;">
      <div class="reg-page" style="border-top:none;">
        <div class="reg-header">
          <div class="text-center">
            <h2><i class="fa fa-info fa-fw"></i><%= t('user.title') %></h2>
            <p><%= t('user.hint') %></p>
          </div>
        </div>

        <form class="form-horizontal">
          <div class="form-group">
            <label class="text-muted col-sm-2 col-xs-12 control-label">Email</label>
            <div class="col-sm-10 col-xs-12">
              <label class="form-control" style="border-color:#FEFEFE;">
                <%= current_user.email %>
              </label>
            </div>
          </div>
          <div class="form-group">
            <label class="text-muted col-sm-2 col-xs-12 control-label"><%= t('name') %></label>
            <div class="col-sm-10 col-xs-12">
              <label class="form-control">
                <% if current_user.name.blank? %>
                  <span class="text-muted"><%= t('user.not_set') %></span>
                <% else %>
                  <%= current_user.name %>
                <% end %>
              </label>
            </div>
          </div>
          <div class="form-group">
            <label class="text-muted col-sm-2 col-xs-12 control-label"><%= t('phone_number') %></label>
            <div class="controls col-sm-10 col-xs-12">
              <label class="form-control">
                <% if current_user.phone.blank? %>
                  <span class="text-muted"><%= t('user.not_set') %></span>
                <% else %>
                  <%= current_user.phone.gsub(/\d{4}$/, '****') %>
                <% end %>
              </label>
            </div>
          </div>
          <div class="form-group">
            <label class="text-muted col-sm-2 col-xs-12 control-label"><%= t('address') %></label>
            <div class="col-sm-10 col-xs-12">
              <label class="form-control">
                <% if current_user.address.blank? %>
                  <span class="text-muted"><%= t('user.not_set') %></span>
                <% else %>
                  <%= current_user.address %>
                <% end %>
              </label>
            </div>
          </div>
          <div class="form-group">
            <label class="text-muted col-sm-2 col-xs-12 control-label">Line</label>
            <div class="col-sm-10 col-xs-12">
              <label class="form-control">
                <% if current_user.line.blank? %>
                  <span class="text-muted"><%= t('user.not_set') %></span>
                <% else %>
                  <%= current_user.line.gsub(/\d{4}$/, '****') %>
                <% end %>
              </label>
            </div>
          </div>
          <%= link_to t('user.set'), edit_user_path, class: 'btn btn-orange btn-lg hover-effect btn-block', style: 'color: #FFF;' %>
          <% unless current_user.provider %>
            <%= link_to t('user.set_password'), password_path, class: 'btn btn-default btn-lg hover-effect btn-block' %>
          <% end %>
          <%= link_to orders_path do %>
            <i class="fa fa-angle-left fa-fw"></i>
            <%= t('back_to_control_panel') %>
          <% end %>
        </form>
      </div>
    </div>
    <!--End Reg Block-->
  </div>
</div>