<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
</head>
<body>
<p>
  <strong><%= t('mailer.dear') %>: </strong><br/>
  <strong><%= t('mailer.thanks_for_order') %> </strong><br/>
</p>
<% if @order.order_products.length > 0 %>
  <h4><%= t('products') %></h4>
  <table>
    <thead>
    <tr>
      <th></th>
      <th>
        <%= t('call_name') %>
      </th>
      <th>
        <%= t('price') %>
      </th>
      <th>
        <%= t('quantity') %>
      </th>
    </tr>
    </thead>
    <tbody>
    <% @order.order_products.each_with_index do |order_product, index| %>
      <% translate = order_product.product.product_translates.where(locale_id: @order.locale_id).first %>
      <tr>
        <td>
          <%= image_tag "#{@domain}#{order_product.product.image.url(:thumb)}", class: 'img-responsive' %>
        </td>
        <td>
          <h5>
            <%= translate.name %>
          </h5>
        </td>
        <td>
          <%= number_to_currency(translate.price) %>&nbsp;<small><%= @order.currency %></small>
        </td>
        <td style="text-align: center">
          <%= order_product.quantity %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<% if @order.order_custom_items.length > 0 %>
  <h4><%= t('personalized_products') %></h4>
  <table>
    <thead>
    <tr>
      <th></th>
      <th>
        <%= t('call_name') %>
      </th>
      <th>
        <%= t('price') %>
      </th>
      <th>
        <%= t('quantity') %>
      </th>
    </tr>
    </thead>
    <tbody>
    <% workdays = 5 %>
    <% @order.order_custom_items.each_with_index do |order_custom_item, index| %>
    <% workdays = order_custom_item.workday if order_custom_item.workday and order_custom_item.workday > workdays %>
      <tr>
        <td>
          <%= image_tag "#{@domain}#{(order_custom_item.product)? order_custom_item.product.image.url(:thumb) : order_custom_item.image.url(:thumb)}", class: 'img-responsive' %>
        </td>
        <td>
          <h5>
            <%= t('original_bag') %>
          </h5>
        </td>
        <td>
          <%= number_to_currency(order_custom_item.order_custom_item_translates.where(locale_id: @order.locale_id).first.price) %>&nbsp;<small><%= @order.currency %></small>
        </td>
        <td style="text-align: center">
          1
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<h4><%= t('shipping_fee') %><label>&nbsp;<%= number_to_currency(@fee) %><small><%= @order.currency %></label></h4>
<h3><%= t('total_amount') %> <%= number_to_currency(@order.subtotal) %>&nbsp;<small><%= @order.currency %></small></h3>
<h3><%= t('shipping_information') %></h3>
<table>
  <tr>
    <td style="text-align: right"><%= t('recipient_name') %></td>
    <td><%= @order.name %></td>
  </tr>
  <tr>
    <td style="text-align: right"><%= t('zip_code') %></td>
    <td><%= @order.zip_code %></td>
  </tr>
  <tr>
    <td style="text-align: right"><%= t('address') %></td>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <td style="text-align: right"><%= t('phone_number') %></td>
    <td><%= (@order.phone.blank?)? @order.phone.gsub(/\d{4}$/, '****') : '-' %></td>
  </tr>
</table>
<p>
  <%= t('working_days', workdays: workdays) %>
</p>
<br>
<p>
  <%= t('working_days', workdays: workdays) %>
  <%= t('completed_hint').html_safe %><br/>
  <%= link_to t('control_panel'), order_url(@order) %>&nbsp;<%= order_url(@order) %><br/>
  <%= t('mailer.suggestion_hint') %><a href="mailto:quoiquoistudio@gmail.com">Email</a>&nbsp;-&nbsp;quoiquoistudio@gmail.com<br/>
  <%= t('sincerely') %>
</p>
<br>
<a href="http://quoiquoi.tw">quoiquoi 布知道</a>
</body>
</html>
