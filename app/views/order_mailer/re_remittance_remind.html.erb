<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
</head>
<body>
<p>
  <strong><%= t('mailer.dear') %>: </strong><br/>
  <strong><%= t('mailer.re_remittance', remittance_link: "<a href=\"http://quoiquoi.tw/payments/#{@order.payment.id}/edit\">#{t('order.advice')}</a>").html_safe %> </strong>&nbsp;<%= "http://quoiquoi.tw/payments/#{@order.payment.id}/edit" %>
</p>
<h3><%= t('remittance_information') %></h3>
<table>
  <tr>
    <td>
      <%= t('remitted_amount') %>
    </td>
    <td>
      <%= number_to_currency(@order.payment.amount) %>
    </td>
  </tr>
  <tr>
    <td>
      <%= t('your_account') %>
    </td>
    <td>
      <%= @order.payment.identifier %>
    </td>
  </tr>
  <tr>
    <td>
      <%= t('remitted_date') %>
    </td>
    <td>
      <%= (@order.payment.pay_time)? @order.payment.pay_time.strftime('%Y/%m/%d'): '-' %>
    </td>
  </tr>
</table>
<h3><%= t('your_order') %></h3>
<% if @order.order_products.length > 0 %>
  <h4><%= t('products') %></h4>
  <table>
    <thead>
    <tr>
      <th></th>
      <th>
        <%= t('call_name') %>
      </th>
      <th>
        <%= t('price') %>
      </th>
      <th>
        <%= t('quantity') %>
      </th>
    </tr>
    </thead>
    <tbody>
    <% @order.order_products.each_with_index do |order_product, index| %>
      <% translate = order_product.product.product_translates.where(locale_id: @order.locale_id).first %>
      <tr>
        <td>
          <%= image_tag "http://quoiquoi.tw#{order_product.product.image.url(:thumb)}", class: 'img-responsive' %>
        </td>
        <td>
          <h5>
            <%= translate.name %>
          </h5>
        </td>
        <td>
          <%= number_to_currency(order_product.price) %>
        </td>
        <td style="text-align: center">
          <%= order_product.quantity %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<% if @order.order_custom_items.length > 0 %>
  <h4><%= t('personalized_products') %></h4>
  <table>
    <thead>
    <tr>
      <th></th>
      <th>
        <%= t('call_name') %>
      </th>
      <th>
        <%= t('price') %>
      </th>
      <th>
        <%= t('quantity') %>
      </th>
    </tr>
    </thead>
    <tbody>
    <% @order.order_custom_items.each_with_index do |order_custom_item, index| %>
      <tr>
        <td>
          <%= image_tag "http://quoiquoi.tw#{(order_custom_item.product)? order_custom_item.product.image.url(:thumb) : order_custom_item.image.url(:thumb)}", class: 'img-responsive' %>
        </td>
        <td>
          <h5>
            <%= t('original_bag') %>
          </h5>
        </td>
        <td style="text-align: center">
          <%= number_to_currency(order_custom_item.order_custom_item_translates.where(locale_id: @order.locale_id).first.price) %>
        </td>
        <td style="text-align: center">
          1
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<% if @discount > 0 %>
  <h4><%= t('user_gift.discount') %><label>&nbsp;<%= number_to_currency(@discount) %></label></h4>
<% end %>
<h4><%= t('shipping_fee') %><label>&nbsp;<%= number_to_currency(@fee) %></h4>
<h3><%= t('total_amount') %> <%= number_to_currency(@order.subtotal) %></h3>
<br>
<br>
<a href="http://quoiquoi.tw">quoiquoi 布知道</a>
</body>
</html>
