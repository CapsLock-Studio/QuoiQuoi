<% translate = @user_gift.gift.gift_translates.where(locale_id: session[:locale_id]).first %>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2" style="margin-top: 40px;">
      <div class="col-md-12 reg-page">
        <div class="item">
          <h4><%= t('choose_payment') %></h4>
          <div class="box">
            <div class="box-header box-header-small grey-background">
              <div class="row">
                <div class="col-md-12">
                  <div class="row">
                    <div class="col-md-4 col-xs-5 text-right">
                      <%= t('gift') %>
                    </div>
                    <div class="col-md-8 col-xs-7">
                      <strong><%= translate.name %></strong>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4 col-xs-5 text-right">
                      <%= t('amount_payable') %>
                    </div>
                    <div class="col-md-8 col-xs-7">
                      <strong><%= number_to_currency(translate.quota * @user_gift.quantity, locale: translate.locale.lang) %></strong>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4 col-xs-5 text-right">
                      <%= t('quantity') %>
                    </div>
                    <div class="col-md-8 col-xs-7">
                      <%= @user_gift.quantity %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%= render 'payments/form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>