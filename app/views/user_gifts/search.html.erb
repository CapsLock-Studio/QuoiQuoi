<% translate = GiftTranslate.where(gift_id: @user_gift.gift_id) %>
<div class="container">
  <div class="row">
    <!--Reg Block-->
    <div class="col-md-8 col-md-offset-2" style="margin-top:40px;">
      <div class="reg-page" style="border-top:none;">
        <div class="row">
          <div class="col-md-12">
            <% if @user_gift %>
              <% if @user_gift.used_time %>
                <h4 class="text-center">
                  <i class="fa fa-exclamation"></i>
                  <%= t('user_gift.oops') %>
                </h4>
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3 text-center">
                    <%= link_to t('back_to_payment'), :back %>
                  </div>
                </div>
              <% else %>
                <div class="box">
                  <div class="box-header box-header-small grey-background">
                    <span class="text-muted"><%= t('user_gift.information') %></span>
                  </div>
                  <div class="box-content box-no-padding" style="border:0;">
                    <div class="responsive-table">
                      <div class="scrollable-area">
                        <table class="table table-bordered text-left table-padding-20" style="margin-bottom:0;">
                          <thead>

                          </thead>
                          <tbody>
                          <tr>
                            <td class="col-xs-4"><%= t('user_gift.quota') %></td>
                            <td><%= number_to_currency(translate.quota) %></td>
                          </tr>
                          <tr>
                            <td class="col-xs-4"><%= t('user_gift.serial') %></td>
                            <td><%= @user_gift.token %></td>
                          </tr>
                          <tr>
                            <td class="col-xs-4"><%= t('used_time') %></td>
                            <td><%= @user_gift.used_time.blank?? t('not_used') : @user_gift.used_time.strftime('%Y/%m/%d %H:%M') %></td>
                          </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <%= form_tag discount_user_gifts_path, method: :put do %>
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= hidden_field_tag :token, params[:token] %>
                      <%= hidden_field_tag :order_id, params[:order_id] %>
                      <%= hidden_field_tag :registration_id, params[:registration_id] %>
                      <button type="submit" class="btn btn-u btn-u-lg btn-u-orange btn-block hover-effect">
                        <%= t('user_gift.confirm') %>
                      </button>
                      <%= link_to :back do %>
                        <i class="fa fa-angle-left"></i>
                        <%= t('cancel_and_back_to_payment') %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <h4 class="text-center">
                <i class="fa fa-exclamation"></i>
                <%= t('user_gift.sorry') %>
              </h4>
              <div class="row">
                <div class="col-sm-6 col-sm-offset-3 text-center">
                  <%= link_to t('back_to_payment'), :back %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!--End Reg Block-->
  </div>
</div>