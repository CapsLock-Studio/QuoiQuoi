<div class="modal fade" id="report-remittance-form">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag report_remittance_registration_path(registration_id), class: 'form validate-form', method: :put do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">
            <%= t('report_remittance') %>
          </h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="amount">
              <%= t('remitted_amount') %>&nbsp;<span class="color-red">*</span>
            </label>
            <div class="row">
              <div class="col-xs-12">
                <div class="controls">
                  <%= text_field_tag :amount, '', class: 'form-control', data: {'rule-required' => true, 'rule-number' => true} %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="account">
              <%= t('your_account') %>
            </label>
            <div class="row">
              <div class="col-xs-12">
                <div class="controls">
                  <%= text_field_tag :account, '', class: 'form-control no-account', data: {'rule-required' => true, 'rule-number' => 'true', 'rule-minlength' => '5', 'rule-maxlength' => '5'} %>
                  <%= t('no_account').html_safe %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="remittance_date">
              <%= t('remitted_date') %>
            </label>
            <div class="row">
              <div class="col-xs-12">
                <div class="controls">
                  <div class="datepicker input-group" id="datepicker">
                    <%= text_field_tag :date, Time.now.strftime('%Y/%m/%d'), class: 'form-control', data: {'rule-required' => true, 'rule-date' => true, 'format' => 'yyyy/MM/dd'} %>
                    <span class="input-group-addon">
                      <span data-date-icon="icon-calendar" data-time-icon="icon-time" class="fa fa-calendar"></span>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('close') %></button>
          <button type="submit" class="btn btn-primary"><%= t('submit') %></button>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->