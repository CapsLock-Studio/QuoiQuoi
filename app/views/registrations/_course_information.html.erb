<div class="row">
  <div class="col-md-6 col-sm-12 col-xs-12">
    <%= image_tag registration.course.image.url(:medium), class: 'img-responsive' %>
  </div>
  <div class="col-md-6 col-sm-12 col-xs-12">
    <h4><%= registration.course.course_translates.find_by_locale_id(registration.locale_id).name %></h4>
    <div class="row">
      <div class="col-xs-12 text-muted">
        <%= t('course_time') %>
      </div>
      <div class="col-xs-12">
        <strong>
          <%= "#{registration.course.time.strftime('%Y/%m/%d %H:%M')} - #{(registration.course.time + registration.course.length.hours).strftime('%H:%M')} (#{t('date.day_names')[registration.course.time.strftime('%u').to_i - 1]})" %>
        </strong>
      </div>
    </div>
    <div class="row margin-bottom-20">
      <div class="col-xs-12 text-muted">
        <%= t('teacher') %>
      </div>
      <div class="col-xs-12">
        <strong>
          <%= registration.course.course_translates.find_by_locale_id(registration.locale_id).teacher %>
        </strong>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <article class="article-content article-collapse" data-collapsed-height="260" data-read-more="#read-more-button" data-read-less="#read-less-button">
          <%== Sanitize.fragment(
                   registration.course.course_translates.find_by_locale_id(registration.locale_id).description,
                   Sanitize::Config::ALLOWED
               ) %>
        </article>
      </div>
    </div>
  </div>
</div>