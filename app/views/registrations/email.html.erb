<div class="container main-container">
  <div class="col-sm-6 col-sm-offset-3 col-xs-12">
    <%= render 'layouts/flash_message' %>
    <div class="box">
      <div class="box-content">
        <h3 class="text-center">
          <i class="fa fa-envelope"></i>請輸入您報名時使用的Email
        </h3>
        <%= form_tag verify_registrations_path, method: :post, class: 'form validate-form' do %>
          <div class="form-group">
            <div class="controls">
              <input class="form-control" name="email" placeholder="example@domain.com" data-rule-required="true" data-rule-email="true" />
            </div>
          </div>
          <div>
            <div style="margin-top: 10px;">
              <div class="pull-right">
                <button type="submit" class="btn btn-default">送出查詢</button>
                <div class="text-center">
                  <a href="#" data-toggle="modal" data-target="#signin-modal">或是登入</a>
                </div>
              </div>
              <%= recaptcha_tags ajax: true %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>