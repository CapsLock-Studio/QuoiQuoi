<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3 col-xs-4 text-right">
        <label class="text-center">店家匯款資訊</label>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 col-xs-4 text-right">
        <%= t('account_name') %>:
      </div>
      <div class="col-md-9 col-xs-8">
        <strong><%= @remittance_translate.name %></strong>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 col-xs-4 text-right">
        <%= t('account_number') %>:
      </div>
      <div class="col-md-9 col-xs-8">
        <strong><%= @remittance_translate.account %></strong>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 col-xs-4 text-right">
        <%= t('bank_code') %>:
      </div>
      <div class="col-md-9 col-xs-8">
        <strong><%= @remittance_translate.code %></strong>
      </div>
    </div>
    <% unless @remittance_translate.bank_name.blank? %>
      <div class="row">
        <div class="col-md-3 col-xs-4 text-right">
          <%= t('bank_name') %>:
        </div>
        <div class="col-md-9 col-xs-8">
          <strong><%= @remittance_translate.bank_name %></strong>
        </div>
      </div>
    <% end %>
    <% unless @remittance_translate.bank_address.blank? %>
      <div class="row">
        <div class="col-md-3 col-xs-4 text-right">
          <%= t('bank_address') %>:
        </div>
        <div class="col-md-9 col-xs-8">
          <strong><%= @remittance_translate.bank_address %></strong>
        </div>
      </div>
    <% end %>
  </div>
</div>