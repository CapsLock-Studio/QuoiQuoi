<%= render 'layouts/breadcrumbs' %>
<div class="container main-container">
  <div class="row row-offcanvas row-offcanvas-left">
    <%= render 'user/side_navigation' %>
    <div class="col-sm-9 col-xs-12">
      <div class="row">
        <%= render 'layouts/nav_item' %>
        <div class="col-xs-12">
          <%= render 'warning_message' %>
        </div>
      </div>
      <div class="box">
        <div class="box-content">
          <% if @order_custom_item.size > 0 %>
            <div class="col-sm-12 hidden-xs text-muted margin-bottom-5">
              <div class="row">
                <div class="col-sm-2">
                  <%= t('order.no_s') %>
                </div>
                <div class="col-sm-3">
                  <%= t('purchased_items') %>
                </div>
                <div class="col-sm-2">
                  <%= t('total_amount') %>
                </div>
                <div class="col-sm-5">
                  <%= t('status') %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>