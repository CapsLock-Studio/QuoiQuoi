<% if order_custom_item.accept.blank? || order_custom_item.price.blank? %>
  <%= t('custom_order.waiting') %>
<% elsif order_custom_item.accept? && !order_custom_item.order %>
  <%= t('custom_order.accept') %>
<% elsif !order_custom_item.accept? && !order_custom_item.order %>
  <%= t('custom_order.decline') %>
<% else %>
  <%= t('in_cart') %>
<% end %>