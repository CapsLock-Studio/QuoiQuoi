<%= render 'layouts/breadcrumbs'  %>
<div class="container main-container">
  <div class="row">
    <div class="col-md-3">
      <h3>旅遊景點</h3>
      <h4 class="text-muted">
        <%= @travel_information.area.name %>
      </h4>
      <ul class="list-group sidebar-nav-v1">
        <% @articles.each do |travel_information| %>
          <%= nav_item(area_travel_information_path(travel_information.area_id, travel_information), {class: 'list-group-item'}) do %>
            <%= link_to truncate(travel_information.title, length: 16), area_travel_information_path(travel_information.area_id, travel_information) %>
          <% end %>
        <% end %>
      </ul>
      <div class="row">
        <div class="col-md-12" style="border-top: 1px solid #F1F1F1;">
          <%= paginate @articles %>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="headline">
        <h3>
          <strong>
            <%= @travel_information.title %>
          </strong>
        </h3>
        <h3 class="pull-right" style="border-bottom: 0;">
          <small><i class="icon-edit"></i>&nbsp;<%= @travel_information.updated_at.strftime('%Y/%m/%d %H:%M') %></small>
        </h3>
      </div>
      <p>
        <%= @travel_information.content.html_safe %>
      </p>
    </div>
  </div>
</div>