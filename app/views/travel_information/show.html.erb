<%= render 'layouts/breadcrumbs'  %>
<div class="container main-container">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col-sm-3 col-xs-6 sidebar-offcanvas">
      <%= render 'areas/category' %>
    </div>
    <%= render 'layouts/nav_item' %>
    <div class="col-sm-9 col-xs-12">
      <h3 class="headline">
        <strong>
          <%= @travel_information.title %>
        </strong>
        <small class="pull-right"><i class="fa fa-clock-o"></i>&nbsp;<%= @travel_information.updated_at.strftime('%Y/%m/%d') %></small>
      </h3>
      <p class="article-content">
        <%= @travel_information.content.html_safe %>
      </p>
    </div>
  </div>
</div>