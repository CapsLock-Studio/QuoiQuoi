<div class="container">
  <div class="row">
    <!--Reg Block-->
    <div class="col-md-6 col-md-offset-3" style="margin-top:40px;">
      <div class="reg-page" style="border-top:none;">
        <div class="reg-header" style="margin-bottom:0">
          <div class="text-center">
            <h2><i class="fa fa-comments"></i><%= t('message.title') %></h2>
            <p></p>
          </div>
        </div>
        <ul class="list-unstyled list-hover list-striped">
          <% @messages.each do |message| %>
            <li>
              <div class="row" style="padding:10px">
                <div class="col-xs-10">
                  <%= truncate(message.content, length: 56) %>
                </div>
                <div class="col-xs-2 text-center">
                  <%= link_to t('detail'), message_path(message) %>
                  <% if message.admin? && !message.read? %>
                    <span class="label label-success"><%= t('message.new') %></span>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <hr/>
        <%= link_to t('message.write'), new_message_path, class: 'btn btn-u-orange btn-lg hover-effect btn-block', style: 'color: #FFF;' %>
        <%= link_to orders_path do %>
          <i class="fa fa-angle-left"></i>
          <%= t('back_to_control_panel') %>
        <% end %>
      </div>
    </div>
    <!--End Reg Block-->
  </div>
</div>