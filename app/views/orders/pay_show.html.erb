<% locale = Locale.where(id: @order.locale_id).first.lang %>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2" style="margin-top: 40px;">
      <div class="col-md-12 reg-page">
        <%= render 'layouts/flash_message' %>
        <div class="item">
          <h4><%= t('choose_payment') %></h4>
          <div class="box">
            <div class="box-header box-header-small grey-background">
              <div class="row">
                <div class="col-md-12">
                  <div class="row">
                    <div class="col-md-3 col-xs-5 text-right">
                      <%= t('amount_payable') %>
                    </div>
                    <div class="col-md-9 col-xs-7">
                      <strong><%= number_to_currency(@order.subtotal, locale: locale) %></strong>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-3 col-xs-5 text-right">
                      <%= t('shipping_information') %>
                    </div>
                    <div class="col-md-9 col-xs-7">
                      <strong>
                        <%= "#{@order.name} / #{(@order.phone)? @order.phone : '-'} / #{@order.address} / #{@order.shipping_fee.area}" %>
                      </strong>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%= render 'payments/form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>