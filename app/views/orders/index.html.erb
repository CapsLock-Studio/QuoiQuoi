<%= render 'layouts/breadcrumbs' %>
<div class="container main-container">
  <div class="row row-offcanvas row-offcanvas-left">
    <%= render 'user/side_navigation' %>
    <div class="col-sm-9">
      <div class="row">
        <%= render 'layouts/nav_item' %>
      </div>
      <% @orders.each do |order| %>
        <div class="box">
          <div class="box-header box-header-small grey-background">
            <h4>
              <%= t('no_s') %> <strong class="text-muted"><%= order.id %></strong>
              <small class="order-time"><%= t('build_time') %>: <strong><%= order.checkout_time.strftime('%Y/%m/%d %H:%M') %></strong></small>
            </h4>
          </div>
          <div class="box-content box-no-padding" style="border:0;">
            <div class="responsive-table">
              <div class="scrollable-area">
                <table class="table table-bordered text-center table-padding-20" style="margin-bottom:0;">
                  <thead>

                  </thead>
                  <tbody>
                  <tr>
                    <td class="text-left col-md-6 hidden-xs">
                      <% order.order_products.each do |order_product| %>
                        <%= image_tag order_product.product.image.url(:thumb) %>
                      <% end %>
                    </td>
                    <td>
                      <% if order.closed? %>
                        <%= t('order.completed') %>
                      <% elsif order.paid? %>
                        <% if order.payment.completed? %>
                          <% if order.delivered? %>
                            <%= t('order.wait_receiving') %>
                          <% else %>
                            <%= t('order.wait_shipping') %>
                          <% end %>
                        <% elsif order.payment.amount == 0 || order.payment.identifier.blank? %>
                          <%= t('order.wait_remittance') %>
                        <% else %>
                          <%= t('order.wait_confirm') %>
                        <% end %>
                      <% else %>
                        <%= t('order.wait_paying') %>
                      <% end %>
                    </td>
                    <td>
                      <%= number_to_currency(order.subtotal) %>
                    </td>
                    <td>
                      <ul class="list-unstyled">
                        <% if order.closed? %>
                          <li>
                            <%= link_to t('detail'), close_order_path(order) %>
                          </li>
                        <% else %>
                          <% if order.paid? %>
                            <% if !order.payment.completed? && (order.payment.amount == 0 || order.payment.identifier.blank?) %>
                              <li>
                                <%= link_to t('order.advice'), edit_payment_path(order.payment), class: 'btn btn-u btn-u-orange hover-effect' %>
                              </li>
                            <% elsif order.delivered? %>
                              <li>
                                <%= link_to t('order.received'), close_order_path(order), class: 'btn btn-u btn-u-orange hover-effect', method: :put %>
                              </li>
                            <% end %>
                          <% else %>
                            <li>
                              <%= link_to t('pay'), pay_order_path(order), class: 'btn btn-u btn-u-orange hover-effect' %>
                            </li>
                          <% end %>
                          <li>
                            <%= link_to t('detail'), order_path(order) %>
                          </li>
                        <% end %>
                      </ul>
                    </td>
                  </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>