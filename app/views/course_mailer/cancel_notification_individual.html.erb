<table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#E74A46" class="100pad" style="padding: 20px 20px;">
  <tr>
    <td align="center">
      <center>
        <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif">
          <span style="color:#FFFFFF;font-size:16px;">
            <%= t('sorry') %>
          </span>
          <span style="color:#F5D6D2;font-size:16px;">
            <%= t('mailer.text.course.cancel.alert') %>
          </span>
        </font>
      </center>
    </td>
  </tr>
</table>
<table width="540" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" class="100pad" style="padding: 20px 20px;">
  <tr>
    <td>
      <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif" color="#848484">
        <span style="font-size:14px;color:#000000;"><%= t('mailer.dear') %></span><br />
        <span style="font-size:14px;">
          <%== t('mailer.text.course.cancel.name', name: "<strong style=\"color:#000000\">#{@course_name}</strong>") %>
        </span>
      </font>
    </td>
  </tr>
</table>
<table width="540" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" class="100padbottom" style="padding: 0px 20px 20px;">
  <tr>
    <td>
      <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif" color="#848484">
        <span style="font-size:14px;">
          <%= t('mailer.text.course.cancel.apologize') %>
        </span>
      </font>
    </td>
  </tr>
</table>
<% if @is_completed == 'true' %>
  <table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" class="100padbottom" style="padding: 0px 20px 20px;">
    <tr>
      <td>
        <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif" color="#848484">
        <span style="font-size:14px;">
          <%= t('mailer.text.course.cancel.refund') %>
        </span>
        </font>
      </td>
    </tr>
  </table>
<% end %>
<table width="540" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" class="100padbottom" style="padding: 0px 20px 20px;">
  <tr>
    <td>
      <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif" color="#848484">
        <span style="font-size:14px;">
          <%= t('mailer.text.course.cancel.registration') %> <a href="<%= registration_url(@registration_id) %>" style="color:#8A929D;"><%= "R#{@registration_id}" %>&nbsp;<img alt="fa-info" width="14" height="14" border="0" style="width:14px;height:14px;" src="<%= image_url('fa-info-circle.png') %>"/></a>
        </span>
      </font>
    </td>
  </tr>
</table>