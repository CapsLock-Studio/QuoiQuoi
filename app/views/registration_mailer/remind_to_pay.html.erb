<table width="100%" border="0" cellspacing="0" cellpadding="0" background="<%= image_url(@registration.course.image.url(:medium)) %>" bgcolor="#3b464e" style="background-image:url(<%= image_url(@registration.course.image.url(:medium)) %>);background-repeat:no-repeat;background-size:cover;padding: 30px 0;" class="100padleftright20x40">
  <tr>
    <td align="center" style="font-size:14px; color:#ffffff;">
      <center>
        <table border="0" cellspacing="0" cellpadding="0" width="360" class="100p">
          <tr>
            <td align="center" bgcolor="#FFFFFF" style="color:#585F69;font-size:22px;">
              <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td height="10">
                  </td>
                </tr>
              </table>
              <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif">
                <a href="<%= month_course_url(@registration.course_id, month: @registration.course.time.strftime('%m').to_i) %>" style="color:#8A929D;">
                  <%= @registration.course.course_translates.find_by_locale_id(@registration.locale_id).name %>&nbsp;<img alt="fa-info" width="18" height="18" border="0" style="width:18px;height:18px;" src="<%= image_url('fa-info-circle.png') %>"/>
                </a><br />
                <strong style="color:#000000;font-size:18px;">
                  <%= "#{@registration.course.time.strftime('%Y/%m/%d %H:%M')} - #{(@registration.course.time + @registration.course.length.hours).strftime('%H:%M')} (#{t('date.day_names')[@registration.course.time.strftime('%u').to_i - 1]})" %>
                </strong>
              </font>
              <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td height="10">
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td align="left" bgcolor="#EFEFEF" style="color:#585F69;font-size:14px;background-color: rgba(255,255,255,0.9) !important;">
              <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td height="10">
                  </td>
                </tr>
              </table>
              <%= render 'payment_info', registration_payment: @registration.registration_payment %>
              <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td height="10">
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </center>
    </td>
  </tr>
</table>
<table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" class="100pad" style="padding: 20px 70px;">
  <tr>
    <td>
      <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif" color="#848484">
        <span style="font-size:14px;color:#000000;"><%= t('mailer.dear') %></span><br />
        <span style="font-size:14px;">
          <%= t('mailer.remind_text_for_registration',
                days: (@registration.registration_payment.expire_time.nil?)? 3 :
                    ((@registration.registration_payment.expire_time - @registration.checkout_time) / 1.days).round) %>
        </span>
      </font>
    </td>
  </tr>
</table>
<table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" class="100padbottom" style="padding: 0px 70px 20px;">
  <tr>
    <td>
      <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif" color="#848484">
        <span style="font-size:14px;">
          <!-- Remittance payment hint -->
          <%= t('mailer.report_button') if @registration.remittance? %>

          <!-- Online payment hint -->
          <%= t('click_to_continue_paying') if @registration.paypal? || @registration.alipay? || @registration.webatm? %>

          <!-- CVS Tutorial -->
          <%= t('cvs_tutorial', cvs: t("#{@registration.payment_method}")) if @registration.cvs_ibon? || @registration.cvs_family? %>

          <%= t('atm_remind') if @registration.atm? %>
        </span>
      </font>
    </td>
  </tr>
</table>
<table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" class="100padleftright" style="padding: 0px 70px;">
  <tr>
    <td>
      <a href="<%= registration_url(@registration.id) if @registration.remittance? %>
               <%= registration_payment_url(@registration.id, action: :webatm_resume) if @registration.webatm? %>
               <%= registration_payment_url(@registration.id, action: :alipay_resume) if @registration.alipay? %>
               <%= @registration.registration_payment.redirect_uri if @registration.paypal? %>
               <%= 'https://www.allpay.com.tw/Service/pay_way_cvpay' if @registration.cvs_ibon? || @registration.cvs_family? %>
               <%= 'https://www.165.gov.tw/' if @registration.atm? %>" style="text-decoration:none;">
        <table width="100%" border="0" cellspacing="0" cellpadding="15"
               bgcolor="<%= (@registration.remittance? || @registration.paypal? || @registration.alipay? || @registration.webatm?)? '#F38B2F' : '#72C8E6' %>">
          <tr>
            <td align="center" style="font-size:20px; color:#FFFFFF;">
              <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif">
                <%= t('report_remittance') if @registration.remittance? %>
                <%= t('continue_on_alipay') if @registration.alipay? %>
                <%= t('continue_on_paypal') if @registration.paypal? %>
                <%= t('continue_pay_page') if @registration.webatm? %>
                <%= t('atm_remind_link') if @registration.atm? %>
                <%= t('cvs_tutorial_link') if @registration.cvs_family? || @registration.cvs_ibon? %>
              </font>
            </td>
          </tr>
        </table>
      </a>
    </td>
  </tr>
</table>
<table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" class="100pad" style="padding: 20px 70px;">
  <tr>
    <td style="font-size:20px;">
      <center>
        <font face="'Source Sans Pro', '微軟正黑體', 'Helvetica Neue', Arial, sans-serif" color="#000000">
          <%= t('sincerely') %>
        </font>
      </center>
    </td>
  </tr>
</table>