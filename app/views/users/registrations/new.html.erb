<div class="container">
  <div class="row">
    <!--Reg Block-->
    <div class="col-md-6 col-md-offset-3" style="margin-top:40px;">
      <div class="reg-page" style="border-top:0;">
        <div class="reg-header">
          <h2><%= t('signup') %></h2>
          <p>
            <%= t('signup_hint') %>
          </p>
        </div>
        <%= form_for(resource, as: resource_name, url: user_registration_path, html: { class: 'validate-form' }) do |f| %>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="form-group">
                <div class="controls margin-bottom-20">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
                    <%= f.text_field :name, value: (flash[:name])? flash[:name] : f.object.name, class: 'form-control', 'placeholder' => t('name'), data: { 'rule-required' => 'true' } %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="controls margin-bottom-20">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
                    <%= f.email_field :email, value: (flash[:email])? flash[:email] : f.object.email, class: 'form-control', 'placeholder' => t('email_placeholder'), data: { 'rule-required' => 'true' } %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="controls margin-bottom-20">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-fw fa-lock"></i></span>
                    <%= f.password_field :password, class: 'form-control', 'placeholder' => t('password_placeholder'), data: { 'rule-required' => 'true' } %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="controls margin-bottom-20">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-fw fa-key"></i></span>
                    <%= f.password_field :password_confirmation, class: 'form-control', 'placeholder' => t('confirm_placeholder'), data: { 'rule-required' => 'true' } %>
                  </div>
                </div>
              </div>
              <%= render 'layouts/messages' %>
            </div>
          </div>

          <hr class="margin-top-0">

          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.button t('signup'), class: 'btn btn-default btn-lg hover-effect btn-block', type: 'submit' %>
              <%= link_to t('signin'), new_user_session_path, class: 'pull-left' %>
              <a href="#" class="pull-right"><%= t('forget_password') %>?</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!--End Reg Block-->
  </div>
</div>