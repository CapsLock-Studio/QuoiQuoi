<%= render 'layouts/breadcrumbs'  %>
<div class="container main-container">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col-sm-3 col-xs-12 sidebar-offcanvas">
      <h4 class="text-muted">
        <%= @article.article_type.name %>
      </h4>
      <ul class="list-group sidebar-nav-v1">
        <% @articles.each do |article| %>
          <%= nav_item(article_path(article), {class: 'list-group-item'}) do %>
            <%= link_to truncate(article.title, length: 20), article_path(article) %>
          <% end %>
        <% end %>
      </ul>
      <div class="row">
        <div class="col-md-12" style="border-top: 1px solid #F1F1F1;">
          <%= paginate @articles %>
        </div>
      </div>
    </div>
    <%= render 'layouts/nav_item' %>
    <div class="col-sm-9 col-xs-12">
      <h3 class="headline">
        <strong>
          <%= @article.title %>
        </strong>
        <small class="pull-right"><i class="fa fa-clock-o"></i>&nbsp;<%= @article.updated_at.strftime('%Y/%m/%d') %></small>
      </h3>
      <p class="article-content">
        <%= @article.content %>
      </p>
    </div>
  </div>
</div>