<% @articles.each do |article| %>
  <div class="article">
    <div class="article-body">
      <%= link_to area_travel_information_path(article.area_id, article) do %>
        <h4>
          <%= article.title %>
          <small class="pull-right"><i class="fa fa-clock-o fa-fw"></i><%= article.created_at.strftime('%Y/%m/%d') %></small>
        </h4>
      <% end %>
      <p class="text-muted">
        <%= strip_tags(article.content) %>
      </p>
    </div>
  </div>
<% end %>