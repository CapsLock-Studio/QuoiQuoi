<div class="box">
  <div class="box-header">
    <div class="title">
      <i class="icon-edit"></i>
      匯款資訊
    </div>
    <div class="actions">
      <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
    </div>
  </div>
  <div class="box-content">
    <%= form_for(@remittance, url: admin_remittances_path, html: { class: 'form validate-form' }) do |f| %>
      <div class="row">
        <%= f.fields_for :remittance_translates do |builder| %>
          <div class="col-sm-6">
            <div class="box">
              <div class="box-header">
                <div class="title">
                  <%= @remittance.remittance_translates[builder.index].locale.name %>
                  <small style="margin-left:10px;">
                    <span class="label label-danger">不可留空</span>
                  </small>
                </div>
                <div class="actions">
                  <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
                </div>
              </div>
              <div class="box-content">
                <div class="form-group">
                  <%= builder.label :name, '帳戶名稱' %>
                  <div class="controls">
                    <%= builder.text_field :name, class: 'form-control',
                                           placeholder: '請輸入名稱', data: {'rule-required' => true} %>
                  </div>
                </div>
                <div class="form-group">
                  <%= builder.label :code, '銀行代碼(國內: Short Code / 國外: Swift Code)' %>
                  <div class="controls">
                    <%= builder.text_field :code, class: 'form-control', placeholder: 'Short Code / Swift Code',
                                           data: {'rule-required' => true} %>
                  </div>
                </div>
                <div class="form-group">
                  <%= builder.label :account, '收款帳戶全部號碼(Full A/C No.)' %>
                  <div class="controls">
                    <%= builder.text_field :account, class: 'form-control', placeholder: '請輸入帳號',
                                           data: {'rule-required' => true} %>
                  </div>
                </div>
                <div class="form-group">
                  <%= builder.label :bank_name do %>
                    銀行名稱 - <span class="label label-danger">英文網站(海外匯款)不可留空</span>
                  <% end %>
                  <div class="controls">
                    <%= builder.text_field :bank_name, class: 'form-control', placeholder: '海外匯款不可留空' %>
                  </div>
                </div>
                <div class="form-group">
                  <%= builder.label :bank_address do %>
                    銀行地址 - <span class="label label-danger">英文網站(海外匯款)不可留空</span>
                  <% end %>
                  <div class="controls">
                    <%= builder.text_field :bank_address, class: 'form-control', placeholder: '海外匯款不可留空' %>
                  </div>
                </div>
                <%= builder.hidden_field :locale_id %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row form-actions">
        <div class="col-sm-12">
          <div class="pull-right">
            <%= link_to '取消', admin_remittances_path, class: 'btn btn-lg' %>
            <%= f.button(class: 'btn btn-primary btn-lg') do %>
              <i class="icon-save"></i>
              儲存
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>