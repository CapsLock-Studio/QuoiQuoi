<div class="box">
  <div class="box-header box-header-small">
    <div class="title">
      查詢條件
    </div>
    <div class="actions">
      <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
    </div>
  </div>
  <div class="box-content">
    <%= form_tag deliver_admin_orders_path, method: :get, html: {class: 'form'} do %>
      <div class="row">
        <div class="col-sm-3 col-xs-4 margin-bottom-10">
          <span class="label label-warning">等待出貨</span>
          <div class='switch switch-small' data-off-label='<i class="icon-remove"></i>' data-on-label='<i class="icon-ok"></i>' style="vertical-align: middle;">
            <%= check_box_tag 'search_filter[]', 'waiting', @search_filter.include?('waiting') %>
          </div>
        </div>

        <div class="col-sm-3 col-xs-4 margin-bottom-10">
          <span class="label label-success">已寄出</span>
          <div class='switch switch-small' data-off-label='<i class="icon-remove"></i>' data-on-label='<i class="icon-ok"></i>' style="vertical-align: middle;">
            <%= check_box_tag 'search_filter[]', 'delivered', @search_filter.include?('delivered') %>
          </div>
        </div>

        <div class="col-sm-3 col-xs-4 margin-bottom-10">
          <span class="label label-danger">寄出件有問題尚未解決</span>
          <div class='switch switch-small' data-off-label='<i class="icon-remove"></i>' data-on-label='<i class="icon-ok"></i>' style="vertical-align: middle;">
            <%= check_box_tag 'search_filter[]', 'problem', @search_filter.include?('problem') %>
          </div>
        </div>

        <div class="col-sm-3 col-xs-4 text-right pull-right">
          <div class="btn-toolbar">
            <button type="submit" class="btn btn-inverse">
              <i class="icon-search"></i>
              查詢
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>