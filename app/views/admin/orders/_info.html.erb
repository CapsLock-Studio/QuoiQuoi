<div class="box">
  <div class="box-header box-header-small">
    <div class="title">
      訂單相關資訊&nbsp;
      <% if order.closed? %>
        <span class="label label-inverse">已封存</span>
      <% end %>
    </div>
  </div>
  <div class="box-content">
    <div class="row">
      <div class="col-xs-12 margin-bottom-10">
        <div class="text-muted">
          收件者姓名
        </div>
        <%= order.name %>
      </div>
      <div class="col-xs-12 margin-bottom-10">
        <div class="text-muted">
          郵遞區號
        </div>
        <%= order.zip_code %>
      </div>
      <div class="col-xs-12 margin-bottom-10">
        <div class="text-muted">
          國家/區域
        </div>
        <%= order.shipping_fee.area %>
      </div>
      <div class="col-xs-12 margin-bottom-10">
        <div class="text-muted">
          收件地址
        </div>
        <%= order.address %>
      </div>
      <div class="col-xs-12 margin-bottom-10">
        <div class="text-muted">
          聯絡電話
        </div>
        <%= order.phone %>
      </div>
      <div class="col-xs-12 margin-bottom-10">
        <div class="text-muted">
          訂單狀態
        </div>
        <% if order.order_payment %>
          <% if order.order_payment.completed? %>
            <span class="label label-success">付款完成</span>
            <div>
              <small>使用&nbsp;<%= t("#{order.payment_method}") %>&nbsp;付款 (<%= order.order_payment.completed_time.strftime('%Y/%m/%d %H:%I:%S') %>)</small>
            </div>
          <% else %>
            <span class="label label-warning">等待付款</span>
          <% end %>
        <% end %>
      </div>
      <% if order.order_payment.completed? %>
        <div class="col-xs-12">
          <div class="text-muted">
            訂單出貨狀態
          </div>
          <%= render 'delivery_status', order: order %>
        </div>
      <% end %>
    </div>
  </div>
</div>