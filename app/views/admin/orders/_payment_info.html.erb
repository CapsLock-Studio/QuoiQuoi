<div class="row">
  <div class="col-sm-12">
    <div class="box">
      <div class="box-header">
        <div class="title">
          付款資訊
        </div>
        <div class="actions">
          <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
        </div>
      </div>
      <div class="box-content">
        <% if @order.payment %>
          <div class="form-group">
            <label>付款方式</label>
            <div class="controls">
              <%= text_field_tag :wait, (@order.payment.wait?)? '匯款' : 'Paypal', class: 'form-control', disabled: 'disabled' %>
            </div>
          </div>
          <div class="form-group">
            <label>付款金額</label>
            <div class="controls">
              <%= text_field_tag :amount, number_to_currency(@order.payment.amount), class: 'form-control', disabled: 'disabled' %>
            </div>
          </div>
          <div class="form-group">
            <label>付款日期</label>
            <div class="controls">
              <%= text_field_tag :address, @order.payment.pay_time.strftime('%Y/%m/%d'), class: 'form-control', disabled: 'disabled' %>
            </div>
          </div>
        <% else %>
          <h4 class="text-center"><i class="icon-exclamation"></i>&nbsp;尚未選擇付款方式</h4>
        <% end %>
      </div>
    </div>
  </div>
</div>