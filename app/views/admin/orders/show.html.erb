<div class="col-xs-12">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-header">
        <h1 class="pull-left">
          <i class="icon-flag"></i>
          訂單記錄詳細
          <small><%= render 'status', order: @order %>&nbsp;<%= "交易完成時間#{@order.closed_time.strftime('%Y/%m/%d %H:%M')}" if @order.closed? %></small>
        </h1>
        <div class="pull-right">
          <ul class="breadcrumb">
            <%= render_breadcrumbs tag: 'li', separator: ' <li class="separator"><i class="icon-angle-right"></i></li> ' %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <%= render 'form' %>
    </div>
    <div class="col-sm-6">
      <%= render 'payment_info' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'order_detail', order: @order %>
    </div>
  </div>
</div>