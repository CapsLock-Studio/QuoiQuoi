<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-flag"></i>
      <span>訂單記錄</span>
    </h1>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box bordered-box sea-blue-border" style="margin-bottom:0;">
        <div class="box-header">
          <div class="title">所有訂單列表</div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
          </div>
        </div>
        <div class="box-content box-no-padding">
          <div class="responsive-table">
            <div class="scrollable-table">
              <table class="data-table table table-striped" style="margin-bottom:0;">
                <thead>
                <tr>
                  <th>訂單編號</th>
                  <th>用戶id&nbsp;<label class="label label-success">點擊查看</label></th>
                  <th>收件者</th>
                  <th>狀態</th>
                  <th>付款方式</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @orders.each do |order| %>
                  <tr>
                    <td>
                      <%= order.id %>
                    </td>
                    <td>
                      <%= link_to order.user.id, admin_user_path(order.user.id), target: '_blank' %>
                    </td>
                    <td>
                      <%= order.name %>
                    </td>
                    <td>
                      <%= render 'status', order: order %>
                    </td>
                    <td>
                      <% if !order.payment %>
                        尚未付款完成
                      <% elsif order.payment.wait? %>
                        匯款
                      <% else %>
                        Paypal
                      <% end %>
                    </td>
                    <td class="text-right">
                      <%= link_to(admin_order_path(order), class: 'btn btn-md') do %>
                        <i class="icon-eye-open"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>