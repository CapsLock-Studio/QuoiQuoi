<div class="row">
  <div class="col-sm-12">
    <div class="box">
      <div class="box-header">
        <div class="title">
          客戶配送資訊
        </div>
        <div class="actions">
          <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
        </div>
      </div>
      <div class="box-content">
        <div class="form-group">
          <label>收件者姓名</label>
          <div class="controls">
            <%= text_field_tag :name, @order.name, class: 'form-control', disabled: 'disabled' %>
          </div>
        </div>
        <div class="form-group">
          <label>郵遞區號</label>
          <div class="controls">
            <%= text_field_tag :zip_code, @order.zip_code, class: 'form-control', disabled: 'disabled' %>
          </div>
        </div>
        <div class="form-group">
          <label>收件地址</label>
          <div class="controls">
            <%= text_field_tag :address, @order.address, class: 'form-control', disabled: 'disabled' %>
          </div>
        </div>
        <div class="form-group">
          <label>聯絡電話</label>
          <div class="controls">
            <%= text_field_tag :phone, @order.phone, class: 'form-control', disabled: 'disabled' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>