<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-user"></i>
      <span>設計師資料管理</span>
    </h1>
    <div class="pull-right">
      <div class="btn-group">
        <%= link_to '新增設計師', new_admin_designer_path, class: 'btn btn-info' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box bordered-box sea-blue-border" style="margin-bottom:0;">
        <div class="box-header sea-blue-background">
          <div class="title">設計師列表</div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
          </div>
        </div>
        <div class="box-content box-no-padding">
          <div class="responsive-table">
            <div class="scrollable-table">
              <table class="data-table table table-striped" style="margin-bottom:0;">
                <thead>
                <tr>
                  <th></th>
                  <th>名字</th>
                  <th>介紹</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @designers.each do |designer| %>
                  <tr>
                    <td>
                      <div class="preview" style="width:100px;height:100px;">
                        <%= image_tag designer.photo.url(:thumb) %>
                      </div>
                    </td>
                    <td>
                      <%= designer.designer_translates.collect{|translate| translate.name.blank?? 'No Translate' : translate.name}.join(' - ') %>
                    </td>
                    <td>
                      <% designer.designer_translates.each_with_index do |translate, index| %>
                        <%= truncate(translate.introduction, length: 40) %>
                        <% if index != designer.designer_translates.length - 1 %>
                          <hr/>
                        <% end %>
                      <% end %>
                    </td>
                    <td>
                      <div class='text-right'>
                        <%= link_to(edit_admin_designer_path(designer), class: 'btn btn-md') do %>
                          <i class='icon-pencil'></i>
                        <% end %>
                        <%= link_to(admin_designer_path(designer), class: 'btn btn-danger btn-md', method: :delete, data: {confirm: '你確定要刪除嗎？'}) do %>
                          <i class='icon-remove'></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>