<%= form_for([:admin, @slide_position], html: { class: 'form validate-form' }) do |f| %>
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.label :position, '位置名稱' %>
      <div class="controls">
        <%= f.text_field :position, class: 'form-control', placeholder: 'left center right', data: {'rule-required'=> true} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, '示意圖' %>
      <div class="controls">
        <%= image_tag @slide_position.image.url(:large), class: 'img-responsive' %>
        <%= f.file_field :image, title: '選擇圖片', class: 'btn-block' %>
      </div>
    </div>
    <div class="row form-actions">
      <div class="col-sm-12">
        <div class="pull-right">
          <%= f.button class: 'btn btn-primary btn-lg' do %>
            <i class="icon-save"></i>
            儲存
          <% end %>
          <%= link_to admin_slide_positions_path, class: 'btn btn-default btn-lg' do %>
            取消
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>