<div class='login-container'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-4 col-sm-offset-4'>
        <h1 class='text-center title'>Sign up</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'validate-form' }) do |f| %>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control', 'data-rule-required' => 'true' %>
              <i class='icon-user text-muted'></i>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.password_field :password, placeholder: 'Password', class: 'form-control', 'data-rule-required' => 'true' %>
              <i class='icon-lock text-muted'></i>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', class: 'form-control', 'data-rule-required' => 'true', 'data-rule-equalto' => "##{:admin_password}" %>
              <i class='icon-lock text-muted'></i>
            </div>
          </div>
          <div class='checkbox'>
            <label for='agreement'>
              <%= f.check_box :agreement, value: '1' %>
              I accept
              <a class='text-contrast' href='#'>user agreements</a>
            </label>
          </div>
          <button class='btn btn-block'>Sign up</button>
        <% end -%>
        <div class='text-center'>
          <hr class='hr-normal'>
          <%= link_to(new_session_path(resource_name)) do %>
            <i class='icon-chevron-left'></i>
            Go back to sign in
          <% end -%>
        </div>
      </div>
    </div>
  </div>
</div>
