<div class="box">
  <div class="box-header">
    <div class="title">
      <i class="icon-edit"></i>
      手工包
    </div>
    <div class="actions">
      <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
    </div>
  </div>
  <div class="box-content box-padding">
    <%= form_for([:admin, @product], html: { class: 'form validate-form', multipart: true }) do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-sm-6 nested-field">
            <div class="row">
              <div class="col-sm-12">
                <div class="box image-preview-box">
                  <%= image_tag f.object.image.url(:large), class: 'img-responsive' %>
                  <%= f.file_field :image, title: '選擇圖片', class: 'btn-block' %>
                </div>
                <a href="#" class="add btn btn-u pull-right">
                  新增圖片
                </a>
              </div>
            </div>
            <div class="row">
              <div class="items">
                <%= f.nested_fields_for :product_images do |builder| %>
                  <div class="col-sm-4 item">
                    <div class="box image-preview-box">
                      <div class="box-header">
                        <div class="actions">
                          <a class="btn remove btn-xs btn-link" href="#"><i class="icon-remove"></i>
                          </a>

                          <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                          </a>
                        </div>
                      </div>
                      <%= image_tag builder.object.image.url(:large), class: 'img-responsive' %>
                      <%= builder.file_field :image, title: '選擇圖片', class: 'btn-block' %>
                      <%= builder.hidden_field :id %>
                      <%= builder.hidden_field :_destroy %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :price, '商品價格' %>
              <div class="controls">
                <%= f.text_field :price, class: 'form-control', placeholder: '請輸入商品價格',
                                 data: {'rule-required' => true, 'rule-number' => true} %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :quantity, '商品現存數量' %>
              <div class="controls">
                <%= f.text_field :quantity, class: 'form-control', placeholder: '請輸入商品現存數量',
                                 data: {'rule-required' => true, 'rule-number' => true} %>
              </div>
            </div>
            <%= f.fields_for :product_translates do |builder| %>
              <div class="box">
                <div class="box-header">
                  <div class="title">
                    <%= @product.product_translates[builder.index].locale.name %>
                    <small style="margin-left:10px;">
                      <span class="label label-success">可留空</span>
                    </small>
                  </div>
                  <div class="actions">
                    <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
                  </div>
                </div>
                <div class="box-content">
                  <div class="form-group">
                    <%= builder.label :name, '商品名稱' %>
                    <div class="controls">
                      <%= builder.text_field :name, class: 'form-control',
                                             placeholder: '請輸入名稱' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= builder.label :description, '商品敘述' %>
                    <div class="controls">
                      <%= builder.text_area :description, class: 'form-control', placeholder: '請輸入敘述' %>
                    </div>
                  </div>
                  <%= builder.hidden_field :locale_id %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="box nested-field">
            <div class="box-header">
              <div class="title">
                <i class="icon-edit"></i>
                手工包克製化項目
              </div>
              <div class="actions">
                <a class="add btn">新增客製化項目</a>
              </div>
            </div>
            <div class="box-padding">
              <div class="row">
                <div class="items">
                  <%= render 'custom_item', f: f %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row form-actions">
          <div class="col-sm-12">
            <div class="pull-right">
              <%= f.button(class: 'btn btn-primary btn-lg') do %>
                <i class="icon-save"></i>
                儲存
              <% end %>
              <%= link_to '取消', admin_products_path, class: 'btn btn-lg' %>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>