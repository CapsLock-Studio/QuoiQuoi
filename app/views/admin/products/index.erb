<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-shopping-cart"></i>
      <span>手作現有商品管理</span>
    </h1>
    <div class="pull-right">
      <div class="btn-group">
        <%= link_to '新增商品', new_admin_product_path, class: 'btn btn-info' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box bordered-box sea-blue-border" style="margin-bottom:0;">
        <div class="box-header sea-blue-background">
          <div class="title">商品列表</div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
          </div>
        </div>
        <div class="box-content box-no-padding">
          <div class="responsive-table">
            <div class="scrollable-table">
              <table class="data-table table table-striped" style="margin-bottom:0;">
                <thead>
                <tr>
                  <th>編號</th>
                  <th></th>
                  <th>商品名稱</th>
                  <th>現存數量</th>
                  <th>價格</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                  <% @products.each do |product| %>
                    <tr>
                      <td>
                        <%= product.id %>
                      </td>
                      <td>
                        <div class="preview">
                          <%= image_tag product.image.url(:thumb), style: 'height:75px;' %>
                        </div>
                      </td>
                      <td>
                        <%= product.product_translates.collect{|translate| translate.name.blank?? 'No Translate' : translate.name}.join(' - ') %>
                      </td>
                      <td>
                        <%= product.quantity %>
                      </td>
                      <td>
                        <%= number_to_currency(product.price) %>
                      </td>
                      <td>
                        <div class='text-right'>
                          <%= link_to(admin_product_product_custom_items_path(product), class: 'btn btn-md') do %>
                            現貨修改可選項目
                          <% end %>
                          <%= link_to(edit_admin_product_path(product), class: 'btn btn-md') do %>
                            <i class='icon-pencil'></i>
                          <% end %>
                          <%= link_to(admin_product_path(product), class: 'btn btn-danger btn-md', method: :delete, data: {confirm: '你確定要刪除嗎？'}) do %>
                            <i class='icon-remove'></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>