<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-dashboard"></i>
      <span>Dashboard</span>
    </h1>
  </div>
  <div class="row">
    <div class="col-xs-6 box">
      <div class="box-header">
        <div class="title">
          <i class="icon-inbox"></i>
          新訂單&nbsp;<span class="text-success">2個月內</span>
        </div>
        <div class="actions">
          <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i>
          </a>
                      
          <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
          </a>
        </div>
      </div>
      <div class="box-content">
        <div id="stats-chart1" style="height:200px;"></div>
      </div>
    </div>
    <div class="col-xs-6 box">
      <div class="box-header">
        <div class="title">
          <i class="icon-group"></i>
          新用戶註冊&nbsp;<span class="text-success">2個月內</span>
        </div>
        <div class="actions">
          <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i>
          </a>
                      
          <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
          </a>
        </div>
      </div>
      <div class="box-content">
        <div id="stats-chart2" style="height:200px;"></div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <div class="title">
            <div class="icon-file-text"></div>
            訂單
          </div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i>
            </a>
                        
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
            </a>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-3">
            <%= link_to check_admin_order_remittances_path do %>
              <div class="box-content box-statistic">
                <h3 class="title text-info"><%= @order[:remittance_report_wait_confirm] %></h3>
                <small>待確認匯款</small>
                <div class="text-info icon-check align-right"></div>
              </div>
            <% end %>
          </div>
          <div class="col-xs-3">
            <%= link_to deliver_admin_orders_path(search_filter: ['waiting']) do %>
              <div class="box-content box-statistic">
                <h3 class="title text-primary"><%= @order[:wait_deliver] %></h3>
                <small>待出貨訂單</small>
                <div class="text-primary icon-truck align-right"></div>
              </div>
            <% end %>
          </div>
          <div class="col-xs-3">
            <%= link_to deliver_admin_orders_path(search_filter: ['problem']) do %>
              <div class="box-content box-statistic">
                <h3 class="title text-danger"><%= @order[:shipping_problem_not_solved] %></h3>
                <small>寄出件有問題尚未解決</small>
                <div class="text-danger icon-flag align-right"></div>
              </div>
            <% end %>
          </div>
          <div class="col-xs-3">
            <%= link_to archive_admin_orders_path do %>
              <div class="box-content box-statistic">
                <h3 class="title text-muted"><%= @order[:archived_this_week] %></h3>
                <small>本週目前為止已封存訂單</small>
                <div class="text-muted icon-ok align-right"></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="box">
        <div class="box-header">
          <div class="title">
            <div class="icon-tasks"></div>
            訂製訂單
          </div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i>
            </a>

            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
            </a>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <%= link_to discussing_admin_custom_orders_path do %>
              <div class="box-content box-statistic">
                <h3 class="title text-warning"><%= @custom_order[:discussing] %></h3>
                <small>討論中訂製</small>
                <div class="text-warning icon-check align-right"></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-8">
      <div class="box">
        <div class="box-header">
          <div class="title">
            <div class="icon-file-text"></div>
            手作教室
          </div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i>
            </a>

            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
            </a>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <%= link_to check_admin_registration_remittances_path do %>
              <div class="box-content box-statistic">
                <h3 class="title text-info"><%= @registration[:remittance_report_wait_confirm] %></h3>
                <small>待確認報名課程匯款</small>
                <div class="text-info icon-check align-right"></div>
              </div>
            <% end %>
          </div>
          <div class="col-xs-6">
            <%= link_to admin_courses_path do %>
              <div class="box-content box-statistic">
                <h3 class="title text-primary">
                  <div class="icon-angle-right"></div>
                </h3>
                <small>課程狀態一覽</small>
                <div class="text-primary icon-check align-right"></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <hr>
