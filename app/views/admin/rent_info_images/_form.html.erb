<div class="box">
  <div class="box-header">
    <div class="title">
      <i class="icon-picture"></i>
      場地照片
    </div>
    <div class="actions">
      <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
    </div>
  </div>
  <div class="box-content box-padding">
    <%= form_for([:admin, @rent_info_image], html: { class: 'form validate-form', multipart: true }) do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-sm-6">
            <div class="nested-field">
              <div class="row">
                <div class="col-sm-12">
                  <div class="box image-preview-box">
                    <%= image_tag f.object.image.url(:large), class: 'img-responsive' %>
                    <%= f.file_field :image, title: '選擇圖片' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row form-actions">
          <div class="col-sm-12">
            <div class="pull-right">
              <%= f.button(class: 'btn btn-primary btn-lg') do %>
                <i class="icon-save"></i>
                儲存
              <% end %>
              <%= link_to '取消', admin_rent_info_images_path, class: 'btn btn-lg' %>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>