<div class="box">
  <div class="box-header">
    <div class="title">
      <i class="icon-book"></i>
      文章
    </div>
    <div class="actions">
      <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
    </div>
  </div>
  <div class="box-content box-padding">
    <%= form_for([:admin, @article], html: { class: 'form validate-form', multipart: true }) do |f| %>
      <fieldset>
        <div class="form-group">
          <%= f.label :article_type_id, '文章種類' %>
          <%= f.select :article_type_id, @article_type_options, {}, {class: 'form-control select2'} %>
        </div>
        <div class="form-group">
          <%= f.label :title, '文章標題' %>
          <div class="controls">
            <%= f.text_field :title, class: 'form-control',
                                   placeholder: '請輸入文章標題', data: {'rule-required' => true} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :content, '文章內容' %>
          <div class="controls">
            <%= f.text_area :content, class: 'form-control wysihtml5',
                                   placeholder: '請輸入文章內容', data: {'rule-required' => true} %>
          </div>
        </div>
        <div class="row form-actions">
          <div class="col-sm-12">
            <div class="pull-right">
              <%= link_to '取消', admin_articles_path, class: 'btn btn-default' %>
              <button class="btn btn-primary" type="submit">
                <i class="icon-save"></i>
                儲存
              </button>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

<div id="insert-image-model" class="bootstrap-wysihtml5-insert-image-modal modal fade">
  <div class="modal-dialog" style="width:auto;">
    <div class="modal-content">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3 class="modal-title">插入圖片</h3>
      </div>

      <div class="modal-body">
        <div class="box">
          <div class="box-content">
            <%= render 'image_upload' %>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>
      </div>
    </div>
  </div>
</div>