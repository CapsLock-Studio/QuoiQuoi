<div class='login-container'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-4 col-sm-offset-4'>
        <h1 class='text-center title'>後台管理系統</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'validate-form' }) do |f| %>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <!-- <input value="" placeholder="E-mail" class="form-control" data-rule-required="true" name="email" type="text" /> -->
              <%= f.email_field :email, class: 'form-control', 'placeholder' => 'Email', 'data-rule-required' => 'true' %>
              <i class='icon-user text-muted'></i>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <!-- <input value="" placeholder="Password" class="form-control" data-rule-required="true" name="password" type="password" /> -->
              <%= f.password_field :password, class: 'form-control', 'placeholder' => 'Password', 'data-rule-required' => 'true' %>
              <i class='icon-lock text-muted'></i>
            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
              <div class='checkbox'>
                <label for='remember_me'>
                  <%= f.check_box :remember_me, value: '1' %>
                  Remember me
                </label>
              </div>
          <% end -%>
          <%= f.submit '登入', class: 'btn btn-block' %>
        <% end -%>
        <%- if devise_mapping.recoverable? && controller_name != 'registrations' && controller_name != 'passwords'  %>
            <div class='text-center'>
              <hr class='hr-normal'>
              <%= link_to 'Forgot your password', new_password_path(resource_name) %>
            </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class='login-container-footer'>
      <div class='container'>
        <div class='row'>
          <div class='col-sm-12'>
            <div class='text-center'>
              <%= link_to new_registration_path(resource_name) do %>
                <i class='icon-user'></i>
                New to Flatty?
                <strong>Sign up</strong>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end -%>