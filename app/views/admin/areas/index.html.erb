<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-anchor"></i>
      <span>旅遊景點地區管理</span>
    </h1>
    <div class="pull-right">
      <div class="btn-group">
        <%= link_to '新增地區', new_admin_area_path, class: 'btn btn-info' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box bordered-box sea-blue-border" style="margin-bottom:0;">
        <div class="box-header">
          <div class="title">地區列表</div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
          </div>
        </div>
        <div class="box-content box-no-padding">
          <div class="responsive-table">
            <div class="scrollable-table">
              <table class="data-table table table-striped" style="margin-bottom:0;">
                <thead>
                <tr>
                  <th>編號</th>
                  <th>語系</th>
                  <th>名稱</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @areas.each do |area| %>
                  <tr>
                    <td>
                      <%= area.id %>
                    </td>
                    <td>
                      <%= area.locale.name %>
                    </td>
                    <td>
                      <%= area.name %>
                    </td>
                    <td>
                      <div class='text-right'>
                        <%= link_to(edit_admin_area_path(area), class: 'btn btn-md') do %>
                          <i class='icon-pencil'></i>
                        <% end %>
                        <%= link_to(admin_area_path(area), class: 'btn btn-danger btn-md', method: :delete, data: {confirm: '你確定要刪除嗎？'}) do %>
                          <i class='icon-remove'></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>