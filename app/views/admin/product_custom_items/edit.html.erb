<div class="col-xs-12">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-header">
        <h1 class="pull-left">
          <%= image_tag @product.image.url(:thumb), class: 'well-sm' %>
          現貨修改可選項目&nbsp;
          <small>現貨名稱:&nbsp;</small>
          <span class="label label-danger">
            <%= @product.product_translates.reject{|translate| translate.name.blank?}.collect{|translate| translate.name}.join('/') %>
          </span>
        </h1>
        <div class="pull-right">
          <ul class="breadcrumb">
            <%= render_breadcrumbs tag: 'li', separator: ' <li class="separator"><i class="icon-angle-right"></i></li> ' %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'form' %>
    </div>
  </div>
</div>