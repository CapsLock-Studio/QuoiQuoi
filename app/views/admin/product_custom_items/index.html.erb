<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <%= image_tag @product.image.url(:thumb), class: 'well-sm' %>
      現貨修改可選項目&nbsp;
      <small>現貨名稱:&nbsp;</small>
      <span class="label label-danger">
        <%= @product.product_translates.reject{|translate| translate.name.blank?}.collect{|translate| translate.name}.join('/') %>
      </span>
    </h1>
    <div class="pull-right">
      <div class="btn-group">
        <%= link_to '新增項目', new_admin_product_product_custom_item_path(@product), class: 'btn btn-info' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="row">
        <% @product_custom_items.each do |item| %>
          <div class="col-sm-3">
            <div class="box image-preview-box">
              <div class="box-header box-header-small">
                <div class="title">
                  <%= item.product_custom_item_translates.reject{|translate| translate.name.blank?}.collect{|translate| translate.name}.join(' / ') %>
                </div>
                <div class="actions">
                  <%= link_to(edit_admin_product_product_custom_item_path(@product, item), class: 'btn btn-xs btn-link') do %>
                    <i class="icon-pencil"></i>
                  <% end %>
                  <%= link_to(admin_product_product_custom_item_path(@product, item), class: 'btn btn-xs btn-link', method: :delete, data: {confirm: '確定要刪除這個項目嗎?'}) do %>
                    <i class="icon-remove"></i>
                  <% end %>
                </div>
              </div>
              <%= image_tag item.image.url(:medium), class: 'img-responsive' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= paginate @product_custom_items %>
        </div>
      </div>
    </div>
  </div>
</div>