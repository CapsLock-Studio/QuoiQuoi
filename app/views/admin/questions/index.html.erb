<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-question"></i>
      <span>FAQ管理</span>
    </h1>
    <div class="pull-right">
      <div class="btn-group">
        <%= link_to '新增FAQ', new_admin_question_path, class: 'btn btn-info' %>
      </div>
    </div>
  </div>
  <div class="row">
    <% Locale.all.order(id: :desc).each do |locale| %>
      <div class="col-sm-10">
        <div class="box" style="margin-bottom:0;">
          <div class="box-header">
            <div class="title"><%= locale.name %></div>
            <div class="actions">
              <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
              <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
            </div>
          </div>
          <div class="box-content">
            <%= render 'about/faq', faqs: @faqs.reject{|faq| faq.locale.lang != locale.lang}, removeable: true %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>