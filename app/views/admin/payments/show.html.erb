<div class="col-xs-12">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-header">
        <h1 class="pull-left">
          <i class="icon-credit-card"></i>
          詳細付款記錄<small><%= render 'status', payment: @payment %></small>
        </h1>
        <div class="pull-right">
          <ul class="breadcrumb">
            <%= render_breadcrumbs tag: 'li', separator: ' <li class="separator"><i class="icon-angle-right"></i></li> ' %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <% if @payment.order %>
        <%= render 'admin/orders/order_detail', order: @payment.order %>
      <% elsif @payment.registration %>
        <%= render 'admin/courses/course_detail', course: @payment.registration.course %>
      <% else %>
        <%= render 'admin/gifts/gift_detail', gift: @payment.user_gift.gift %>
      <% end %>
    </div>
    <div class="col-sm-4">
      <%= render 'form' %>
    </div>
  </div>
</div>