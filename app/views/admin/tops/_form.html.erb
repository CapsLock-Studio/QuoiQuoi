<div class="col-xs-12">
  <%= form_for([:admin, @top], html: { class: 'form validate-form' }) do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <div class="box image-preview-box">
          <%= image_tag f.object.image.url(:medium), class: 'img-responsive' %>
          <%= f.file_field :image, title: '選擇圖片', class: 'btn-block' %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.fields_for :top_translates do |builder| %>
            <div class="box">
              <div class="box-header">
                <div class="title">
                  <%= @top.top_translates[builder.index].locale.name %>
                  <small style="margin-left:10px;">
                    <span class="label label-danger">不可留空</span>
                  </small>
                </div>
                <div class="actions">
                  <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
                </div>
              </div>
              <div class="box-content">
                <div class="form-group">
                  <%= builder.label :link, '連結位置' %>
                  <div class="controls">
                    <%= builder.text_field :link, class: 'form-control', placeholder: 'http://' %>
                  </div>
                </div>
                <%= builder.hidden_field :locale_id %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row form-actions">
      <div class="col-sm-12">
        <div class="pull-right">
          <%= link_to admin_tops_path, class: 'btn btn-default btn-lg' do %>
            取消
          <% end %>
          <%= f.button class: 'btn btn-primary btn-lg' do %>
            <i class="icon-save"></i>
            儲存
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>