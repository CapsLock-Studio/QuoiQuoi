<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-flag"></i>
      <span>禮品券記錄</span>
    </h1>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box bordered-box sea-blue-border" style="margin-bottom:0;">
        <div class="box-header sea-blue-background">
          <div class="title">所有禮品券列表</div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
          </div>
        </div>
        <div class="box-content box-no-padding">
          <div class="responsive-table">
            <div class="scrollable-table">
              <table class="data-table table table-striped" style="margin-bottom:0;">
                <thead>
                <tr>
                  <th>禮品券編號</th>
                  <th>用戶id&nbsp;<label class="label label-success">點擊查看</label></th>
                  <th>額度</th>
                  <th>狀態</th>
                  <th>付款方式</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @user_gifts.each do |user_gift| %>
                  <tr>
                    <td>
                      <%= user_gift.id %>
                    </td>
                    <td>
                      <%= link_to user_gift.user_id, admin_user_path(user_gift.user_id), target: '_blank' %>
                    </td>
                    <td>
                      <%= number_to_currency(user_gift.gift.quota) %>
                    </td>
                    <td>
                      <%= render 'status', user_gift: user_gift %>
                    </td>
                    <td>
                      <% if !user_gift.payment %>
                        尚未付款完成
                      <% elsif user_gift.payment.wait? %>
                        匯款
                      <% else %>
                        Paypal
                      <% end %>
                    </td>
                    <td class="text-right">
                      <%= link_to(admin_user_gift_path(user_gift), class: 'btn btn-md') do %>
                        <i class="icon-eye-open"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>