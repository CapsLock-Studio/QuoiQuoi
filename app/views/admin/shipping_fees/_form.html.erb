<div class="box">
  <div class="box-header">
    <div class="title">
      <i class="icon-globe"></i>
      區域運費選項
    </div>
    <div class="actions">
      <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
    </div>
  </div>
  <div class="box-content box-padding">
    <%= form_for([:admin, @shipping_fee], html: { class: 'form validate-form', multipart: true }) do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :area, '區域' %>
              <div class="controls">
                <%= f.text_field :area, class: 'form-control', placeholder: '請輸入區域名稱', data: {'rule-required' => true} %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :fee, '運費' %>
              <div class="controls">
                <%= f.text_field :fee, class: 'form-control', placeholder: '請輸入運費金額', data: {'rule-required' => true, 'rule-number' => true} %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :free_condition, '滿額免運費額度' %>&nbsp;<label class="label label-warning">不適用滿額免運費可留空</label>
              <div class="controls">
                <%= f.text_field :free_condition, class: 'form-control', placeholder: '請輸入滿額免運費額度' %>
              </div>
            </div>
          </div>
        </div>
        <div class="row form-actions">
          <div class="col-sm-12">
            <div class="pull-right">
              <%= link_to '取消', admin_shipping_fees_path, class: 'btn btn-lg' %>
              <%= f.button(class: 'btn btn-primary btn-lg') do %>
                <i class="icon-save"></i>
                儲存
              <% end %>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>