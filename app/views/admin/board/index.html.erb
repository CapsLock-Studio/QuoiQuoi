<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-comments-alt"></i>
      <span>訊息留言板管理</span>
    </h1>
    <div class="pull-right">
      <ul class="breadcrumb">
        <%= render_breadcrumbs tag: 'li', separator: ' <li class="separator"><i class="icon-angle-right"></i></li> ' %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box bordered-box sea-blue-border" style="margin-bottom:0;">
        <div class="box-header sea-blue-background">
          <div class="title">
            <span>訊息列表</span>
          </div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
          </div>
        </div>
        <div class="box-content box-no-padding">
          <div class="responsive-table">
            <div class="scrollable-table">
              <table class="data-table table table-striped" style="margin-bottom:0;">
                <thead>
                <tr>
                  <th>編號</th>
                  <th>留言者</th>
                  <th>訊息內容</th>
                  <th>送出時間</th>
                  <th></th>
                </tr>
                <tbody>
                <% @contact_us.each do |message| %>
                  <tr>
                    <td><%= message.id %></td>
                    <td>
                      <%= "#{message.name}<br/>#{message.email}".html_safe %>
                    </td>
                    <td>
                      <%= truncate(message.content, length: 25) %>
                    </td>
                    <td>
                      <%= message.created_at.strftime('%Y/%m/%d %H:%I:%S') %>
                    </td>
                    <td>
                      <div class="text-right">
                        <%= link_to(admin_board_path(message), class: 'btn btn-md') do %>
                          <i class="icon-eye-open"></i>
                        <% end %>
                        <%= link_to(admin_board_path(message), class: 'btn btn-md btn-danger', method: :delete, data: {confirm: '確定要刪除此留言嗎?'}) do %>
                          <i class="icon-remove"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>