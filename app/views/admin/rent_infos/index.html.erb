<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-info"></i>
      <span>場地資訊管理</span>
    </h1>
    <div class="pull-right">
      <div class="btn-group">
        <div class="btn-toolbar">
          <%= link_to '新增場地資訊', new_admin_rent_info_path, class: 'btn btn-info' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box bordered-box sea-blue-border" style="margin-bottom:0;">
        <div class="box-header sea-blue-background">
          <div class="title">場地資訊列表</div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
          </div>
        </div>
        <div class="box-content box-no-padding">
          <div class="responsive-table">
            <div class="scrollable-table sortable-container">
              <table class="table" style="margin-bottom:0;">
                <thead>
                <tr>
                  <th>標題</th>
                  <th>內容</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @rent_infos.each do |rent_info| %>
                  <tr>
                    <td>
                      <% rent_info.rent_info_translates.each_with_index do |translate, index| %>
                        <%= (translate.title.blank?? 'No Translate' : translate.title).gsub(/{/, '<span class="text-muted">').gsub(/}/, '</span>').html_safe %>
                        <% if index != rent_info.rent_info_translates.length - 1 %>
                          <hr/>
                        <% end %>
                      <% end %>
                    </td>
                    <td>
                      <% rent_info.rent_info_translates.each_with_index do |translate, index| %>
                        <%= truncate(translate.content, length: 40) %>
                        <% if index != rent_info.rent_info_translates.length - 1 %>
                          <hr/>
                        <% end %>
                      <% end %>
                    </td>
                    <td>
                      <div class='text-right'>
                        <%= link_to(edit_admin_rent_info_path(rent_info), class: 'btn btn-md') do %>
                          <i class='icon-pencil'></i>
                        <% end %>
                        <%= link_to(admin_rent_info_path(rent_info), class: 'btn btn-danger btn-md', method: :delete, data: {confirm: '你確定要刪除嗎？'}) do %>
                          <i class='icon-remove'></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>