<li class="row" data-sub-id="<%= course_option.id %>">
  <div class="col-xs-5">
    <%= course_option.content %>
  </div>
  <div class="col-xs-4">
    <%= number_to_currency(course_option.price, locale: course_option.course_option_group.locale.lang) %>
  </div>
  <div class="col-xs-3 text-right">
    <%= link_to edit_admin_course_option_path(course_option),
                class: 'btn btn-xs sub-edit-trigger',
                data: {'sub-target-id' => course_option.id} do %>
      <i class="icon-pencil"></i>
    <% end %>
    <%= link_to admin_course_option_path(course_option),
                class: 'btn btn-danger btn-xs sub-destroy-trigger',
                data: {'sub-target-id' => course_option.id} do %>
      <i class="icon-remove"></i>
    <% end %>
  </div>
</li>