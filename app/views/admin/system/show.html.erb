<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-gear"></i>
      網站系統管理
    </h1>
    <div class="pull-right">
      <div class="btn-group">
        <%= link_to '修改項目', edit_admin_system_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <div class="actions">
            <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
          </div>
        </div>
        <div class="box-content">
          <label for="website-title">網站名稱(請盡可能簡短)</label>
          <div class="form-group">
            <input id="website-title" disabled="disabled" class="form-control" value="<%= $redis.get('seo:title') %>" />
          </div>
          <label for="seo-title">網站標題(請控制在100字以內)</label>
          <div class="form-group">
            <input id="seo-title" disabled="disabled" class="form-control" value="<%= $redis.get('seo:og:title') %>" />
          </div>
          <label for="seo-description">網站敘述(請控制在140字以內)</label>
          <div class="form-group">
            <input id="seo-description" disabled="disabled" class="form-control" value="<%= $redis.get('seo:description') %>" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>