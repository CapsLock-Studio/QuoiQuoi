<div class="box">
  <div class="box-header">
    <div class="title">
      <i class="icon-edit"></i>
      輪播
    </div>
    <div class="actions">
      <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
    </div>
  </div>
  <div class="box-content box-padding">
    <%= form_for([:admin, @slide], html: { class: 'form validate-form', multipart: true }) do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-sm-12 nested-field">
            <div class="row">
              <div class="col-md-12">
                <div class="box image-preview-box">
                  <%= image_tag f.object.image.url(:large), class: 'img-responsive', style: 'width:100%;' %>
                  <%= f.file_field :image, title: '選擇圖片', class: 'btn-block' %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="form-group">
              <label>輪播文字顯示位置</label>
              <% @slide_positions.each_with_index do |slide_position, index| %>
                <div class="checkbox">
                  <%= f.label("#{:slide_position_id}_#{slide_position.id}", class: 'radio radio-inline') do %>
                    <%= image_tag slide_position.image.url(:medium) %>
                    <%= f.radio_button :slide_position_id, slide_position.id, checked: (index == 0)? 'checked' : nil %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-sm-12">
            <%= f.fields_for :slide_translates do |builder| %>
              <div class="box">
                <div class="box-header">
                  <div class="title">
                    <%= @slide.slide_translates[builder.index].locale.name %>
                    <small style="margin-left:10px;">
                      <span class="label label-success">可留空</span>
                    </small>
                  </div>
                  <div class="actions">
                    <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
                  </div>
                </div>
                <div class="box-content">
                  <div class="form-group">
                    <%= builder.label :link, '連結' %>
                    <small style="margin-left:10px;">
                      <span class="label label-success">可留空</span>
                    </small>
                    <div class="controls">
                      <%= builder.text_field :link, class: 'form-control', placeholder: 'http://' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= builder.label :description, '敘述文字' %>
                    <span class="label label-primary">如需要上色請用 {文字字串} 的方式包裹 ex: {最新消息}</span>
                    <div class="controls">
                      <%= builder.text_area :description, class: 'form-control', placeholder: '請輸入敘述' %>
                    </div>
                  </div>
                  <%= builder.hidden_field :locale_id %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row form-actions">
          <div class="col-sm-12">
            <div class="pull-right">
              <%= link_to '取消', admin_slides_path, class: 'btn btn-lg' %>
              <%= f.button(class: 'btn btn-primary btn-lg') do %>
                <i class="icon-save"></i>
                儲存
              <% end %>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>