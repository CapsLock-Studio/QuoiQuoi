<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-user"></i>
      <span>課程報名人</span>
    </h1>
    <div class="pull-right">
      <ul class="breadcrumb">
        <%= render_breadcrumbs tag: 'li', separator: ' <li class="separator"><i class="icon-angle-right"></i></li> ' %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box bordered-box sea-blue-border" style="margin-bottom:0;">
        <div class="box-header sea-blue-background">
          <div class="title">所有報名人列表</div>
          <div class="actions">
            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i></a>
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
          </div>
        </div>
        <div class="box-content box-no-padding">
          <div class="responsive-table">
            <div class="scrollable-table">
              <table class="data-table table table-striped" style="margin-bottom:0;">
                <thead>
                <tr>
                  <th>報名編號</th>
                  <th>用戶id<br/><label class="label label-success">點擊查看</label></th>
                  <th>姓名</th>
                  <th>Email</th>
                  <th>電話</th>
                  <th></th>
                  <th>狀態</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @course.registrations.each do |registration| %>
                  <tr>
                    <td>
                      <%= registration.id %>
                    </td>
                    <td>
                      <% if registration.user %>
                        <%= link_to(registration.user_id, admin_user_path(registration.user_id), target: '_blank') %>
                      <% else %>
                        -
                      <% end %>
                    </td>
                    <td>
                      <%= registration.name %>
                    </td>
                    <td>
                      <%= registration.email %>
                    </td>
                    <td>
                      <%= registration.phone %>
                    </td>
                    <td>
                      <% if registration.course_option %>
                        <h4 style="margin:0;">
                          <span class="label label-lg label-primary">
                            <%= registration.course_option.content %>
                          </span>
                        </h4>
                      <% end %>
                    </td>
                    <td>
                      <% if registration.returned? %>
                        <label class="label label-default">已退款</label>
                      <% end %>
                      <% if registration.canceled? %>
                        <label class="label label-default">已取消</label>
                        <% end %>
                      <% if registration.payment && registration.payment.completed? %>
                        <label class="label label-success">付款完成</label>
                      <% else %>
                        <label class="label label-warning">尚未付款完成</label>
                      <% end %>
                    </td>
                    <td class="text-right">
                      <%  unless registration.returned? %>
                        <% if registration.canceled? %>
                          <% if registration.payment && registration.payment.completed? %>
                            <%= link_to(return_admin_course_registration_path(registration), class: 'btn btn-warning', method: :put, data: {confirm: '確定報名金額已退還?'}) do %>
                              <i class="icon-file-alt"></i>
                              確認退還報名金
                            <% end %>
                          <% end %>
                        <% else %>
                          <%= link_to(cancel_admin_course_registration_path(registration), class: 'btn btn-danger', method: :get, data: {confirm: '確定要取消該用戶的報名嗎?'}) do %>
                            <i class="icon-remove"></i>
                            取消報名
                          <% end %>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>