<div class="box">
  <div class="box-header">
    <div class="title">
      <i class="icon-edit"></i>
      其他商品
    </div>
    <div class="actions">
      <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
    </div>
  </div>
  <div class="box-content box-padding">
    <%= form_for([:admin, @product], html: { class: 'form validate-form', multipart: true }) do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-sm-6">
            <div class="nested-field" style="margin-bottom:10px;">
              <div class="row">
                <div class="col-sm-12">
                  <div class="box image-preview-box">
                    <%= image_tag f.object.image.url(:large), class: 'img-responsive' %>
                    <%= f.file_field :image, title: '選擇圖片', class: 'btn-block' %>
                  </div>
                  <a href="#" class="add btn btn-u pull-right">
                    新增圖片
                  </a>
                </div>
              </div>
              <div class="row">
                <div class="items">
                  <%= f.nested_fields_for :product_images do |builder| %>
                    <div class="col-sm-4 item">
                      <div class="box image-preview-box">
                        <div class="box-header">
                          <div class="actions">
                            <a class="btn remove btn-xs btn-link" href="#"><i class="icon-remove"></i>
                            </a>

                            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                            </a>
                          </div>
                        </div>
                        <%= image_tag builder.object.image.url(:large), class: 'img-responsive' %>
                        <%= builder.file_field :image, title: '選擇圖片', class: 'btn-block' %>
                        <%= builder.hidden_field :id %>
                        <%= builder.hidden_field :_destroy %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.select(:product_type_id, ProductType.all.collect do |product_type|
                [product_type.product_type_translates.collect{|translate| translate.name}.join(' - '), product_type.id]
               end.insert(0, '請選擇商品種類'), {include_blank: false}, {class: 'form-control'}) %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :quantity, '商品現存數量' %>
              <div class="controls">
                <%= f.text_field :quantity, class: 'form-control', placeholder: '請輸入商品現存數量',
                                 data: {'rule-required' => true, 'rule-number' => true} %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :discount, '優惠折扣(例如8折請輸入8)' %>
              <div class="controls">
                <%= f.text_field :discount, class: 'form-control', placeholder: '請輸入要打幾折',
                                 data: {'rule-required' => true, 'rule-number' => true} %>
              </div>
            </div>
            <div class="nested-field text-right">
              <div class="form-group">
                <a href="#" class="add btn btn-u">
                  新增現貨選項
                </a>
              </div>
              <div class="items">
                <%= f.nested_fields_for :product_options do |builder| %>
                  <div class="form-group item">
                    <div class="row">
                      <div class="col-md-2" style="padding-right: 0">
                        <%= builder.select :locale_id, Locale.all.order(id: :desc).collect{|locale| [locale.name, locale.id]}, {selected: builder.object.locale_id}, {class: 'form-control'} %>
                      </div>
                      <div class="col-md-9" style="padding-right: 0;">
                        <%= builder.text_field :content, class: 'form-control', placeholder: '選項內容' %>
                        <%= builder.hidden_field :id %>
                        <%= builder.hidden_field :_destroy %>
                      </div>
                      <div class="col-md-1" style="padding-left: 0;">
                        <a class="btn remove btn-xs btn-link" href="#" style="padding-top: 7px;">
                          <i class="icon-remove"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <%= f.fields_for :product_translates do |builder| %>
              <div class="box">
                <div class="box-header">
                  <div class="title">
                    <%= @product.product_translates[builder.index].locale.name %>
                    <small style="margin-left:10px;">
                      <span class="label label-success">可留空</span>
                    </small>
                  </div>
                  <div class="actions">
                    <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
                  </div>
                </div>
                <div class="box-content">
                  <div class="form-group">
                    <%= builder.label :price, "價格(#{@product.product_translates[builder.index].locale.currency})" %>
                    <div class="controls">
                      <%= builder.text_field :price, class: 'form-control',
                                             placeholder: '請輸入價格', data: {number: true} %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= builder.label :name, '商品名稱' %>
                    <div class="controls">
                      <%= builder.text_field :name, class: 'form-control',
                                             placeholder: '請輸入名稱' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= builder.label :description, '商品敘述' %>
                    <div class="controls">
                      <%= builder.text_area :description, class: 'form-control autosize', placeholder: '請輸入敘述' %>
                    </div>
                  </div>
                  <%= builder.hidden_field :locale_id %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row form-actions">
          <div class="col-sm-12">
            <div class="pull-right">
              <%= link_to '取消', admin_products_path, class: 'btn btn-lg' %>
              <%= f.button(class: 'btn btn-primary btn-lg') do %>
                <i class="icon-save"></i>
                儲存
              <% end %>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>