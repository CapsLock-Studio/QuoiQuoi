<%= form_for([:admin, @broadcast], html: { class: 'form validate-form' }) do |f| %>
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.label :link, '連結位置' %>
      <div class="controls">
        <%= f.text_field :link, class: 'form-control', placeholder: 'http://' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.fields_for :broadcast_translates do |builder| %>
        <div class="box">
          <div class="box-header">
            <div class="title">
              <%= @broadcast.broadcast_translates[builder.index].locale.name %>
              <small style="margin-left:10px;">
                <span class="label label-success">可留空</span>
              </small>
            </div>
            <div class="actions">
              <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
            </div>
          </div>
          <div class="box-content">
            <div class="form-group">
              <%= builder.label :notification, '快訊訊息' %>
              <div class="controls">
                <%= builder.text_field :notification, class: 'form-control', placeholder: '請輸入訊息' %>
              </div>
            </div>
            <%= builder.hidden_field :locale_id %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row form-actions">
      <div class="col-sm-12">
        <div class="pull-right">
          <%= f.button class: 'btn btn-primary btn-lg' do %>
            <i class="icon-save"></i>
            儲存
          <% end %>
          <%= link_to admin_broadcasts_path, class: 'btn btn-default btn-lg' do %>
            取消
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>