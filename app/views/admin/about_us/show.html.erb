<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-info"></i>
      <span>店家聯絡資訊管理</span>
    </h1>
    <div class="pull-right">
      <div class="btn-group">
        <%= link_to '修改店家聯絡資訊', edit_admin_about_us_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="box">
        <div class="box-header">
          <div class="title">
            <i class="icon-info"></i>
            聯絡資訊
          </div>
          <div class="actions">
            <a href="#" class="btn box-collapse btn-xs btn-link"><i></i></a>
          </div>
        </div>
        <div class="box-content box-padding">
          <div class="row">
            <% Locale.all.order(id: :desc).each_with_index do |locale, index| %>
              <div class="col-sm-6">
                <div class="box">
                  <div class="box-header">
                    <div class="title">
                      <%= locale.name %>
                    </div>
                    <div class="actions">
                      <a class="btn box-collapse btn-xs btn-link" href="#"><i></i></a>
                    </div>
                  </div>
                  <div class="box-content">
                    <div class="form-group">
                      <label>Email</label>
                      <div class="controls">
                        <%= text_field_tag :email, $redis.get("about:locale:#{locale.id}:email"), class: 'form-control', disabled: 'disabled' %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label>電話</label>
                      <div class="controls">
                        <%= text_field_tag :phone, $redis.get("about:locale:#{locale.id}:phone"), class: 'form-control', disabled: 'disabled' %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label>店鋪位置</label>
                      <div class="controls">
                        <%= text_area_tag :address, $redis.get("about:locale:#{locale.id}:address"), class: 'form-control autosize', disabled: 'disabled' %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label>營業時間</label>
                      <div class="controls">
                        <%= text_area_tag :business_hour, $redis.get("about:locale:#{locale.id}:business_hour"), class: 'form-control autosize', disabled: 'disabled' %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label>介紹文字</label>
                      <div class="controls">
                        <%= text_area_tag :introduction, $redis.get("about:locale:#{locale.id}:introduction"), class: 'form-control autosize', disabled: 'disabled' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>