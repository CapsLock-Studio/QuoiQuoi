<% translate = GiftTranslate.where(gift_id: @user_gift.gift_id, locale_id: @user_gift.locale_id).first %>

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
</head>
<body>
<p>
  <strong><%= t('mailer.dear') %> </strong><br/>
  <%= t('mailer.send_gift_card_part1').html_safe %><br/>
  <%= t('quoiquoi_website') %>:&nbsp;http://quoiquoi.tw
  <%= t('mailer.send_gift_card_part2').html_safe %>&nbsp;<a href="mailto:quoiquoistudio@gmail.com">Email</a>&nbsp;quoiquoistudio@gmail.com
</p>
<h4><%= t('user_gift.information') %></h4>
<table class="table table-hover">
  <thead>
  <tr>
    <td></td>
    <td><%= t('call_name') %></td>
    <td><%= t('user_gift.quota') %></td>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td>
      <%= image_tag "http://quoiquoi.tw#{@user_gift.gift.image(:thumb)}" %>
    </td>
    <td>
      <h5>
        <%= translate.name %>
      </h5>
    </td>
    <td>
      <%= number_to_currency(translate.quota) %>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <h4><%= t('user_gift.serial') %>:&nbsp;<strong><%= @user_gift_serial.serial %></strong></h4>
    </td>
  </tr>
  </tbody>
</table>
<br>
<br>
<a href="http://quoiquoi.tw">quoiquoi 布知道</a>
</body>
</html>
