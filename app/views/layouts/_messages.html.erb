<% flash.each do |name, msg| %>
  <% if name == 'alert' %>
    <div class="alert alert-danger fade-in">
      <a href="#" class="close" data-dismiss="alert"><i class="icon-remove"></i></a>
      <%= msg %>
    </div>
  <% end %>
<% end %>

<% resource.errors.messages.reject{|key, message| message.blank?}.each do |key, message| %>
  <div class="alert alert-danger fade-in">
    <a href="#" class="close" data-dismiss="alert"><i class="icon-remove"></i></a>
    <%= message[0] %>
  </div>
<% end %>