<% subtotal = 0 %>
<section id="asideMenu" class="col-md-3 col-sm-6 col-xs-10 aside-menu" data-no-turbolink="data-no-turbolink">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <div class="title">
            <i class="fa fa-shopping-cart">
              <span style="margin-left:10px;"><%= t('cart') %></span>
            </i>
          </div>
          <div class="actions">
            <button class="btn btn-close pull-right navbar-toggle-aside-menu" type="button">
              <i class="fa fa-times"></i>
            </button>
          </div>
        </div>
        <% if @menu_orders && (@menu_orders.order_products.length > 0 || @menu_orders.order_custom_items.length > 0) %>
          <div class="box-content">
            <div class="row">
              <div class="col-md-12">
                <h4 class="side-section-title">
                  <%= t('shopping_list') %>
                </h4>
              </div>
            </div>
          </div>
          <div>
            <% @menu_orders.order_products.each do |order_product| %>
              <% translate = order_product.product.product_translates.where(locale_id: session[:locale_id]).first %>
              <% subtotal += order_product.price * order_product.quantity %>
              <div class="search-blocks search-blocks-colored side-menu-block">
                <div class="col-md-6 search-img">
                  <%= image_tag order_product.product.image.url(:medium), class: 'img-responsive' %>
                </div>
                <div class="col-md-6">
                  <%= link_to(order_product_path(order_product), class: 'btn pull-right', method: :delete) do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                  <h4>
                    <%= translate.name %>
                  </h4>
                  <h5 class="text-muted"><%= "#{number_to_currency(order_product.price)} * #{order_product.quantity}" %></h5>
                </div>
              </div>
            <% end %>
            <% @menu_orders.order_custom_items.each do|order_custom_item| %>
              <% translate = order_custom_item.order_custom_item_translates.where(locale_id: session[:locale_id]).first %>
              <% subtotal += translate.price %>
              <div class="search-blocks search-blocks-colored side-menu-block">
                <div class="col-md-6 search-img">
                  <%= image_tag order_custom_item.image.url(:medium), class: 'img-responsive' %>
                </div>
                <div class="col-md-6">
                  <%= link_to(order_custom_item_path(order_custom_item), class: 'pull-right', method: :delete) do %>
                    <i class="icon-remove"></i>
                  <% end %>
                  <h4><%= t('original_bag') %></h4>
                  <h5 class="text-muted"><%= number_to_currency(translate.price) %></h5>
                </div>
              </div>
            <% end %>
          </div>
          <div class="box-content">
            <div class="row">
              <div class="col-md-12">
                <h4 class="text-right margin-bottom-20">
                  <%= t('total_amount') %>: <%= number_to_currency(subtotal) %>
                </h4>
                <%= link_to t('check_out'), cart_path, class: 'btn btn-u-orange btn-block btn-lg hover-effect navbar-toggle-aside-menu', style: 'color:#FFF;' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>