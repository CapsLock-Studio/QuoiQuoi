<div class="top-navigation row hidden-xs">
  <div class="container">
    <ul class="list-unstyled pull-right">
      <li>
        <div class="top">
          <a href="#" class="<%= 'disabled' if !@order_in_cart.nil? && !@order_in_cart.in_cart_empty? %>">
            <i class="fa fa-globe"></i>
            <%= t('language') %>
          </a>
          <% if @order_in_cart.nil? || @order_in_cart.in_cart_empty? %>
            <ul class="languages">
              <%= lang_nav_item('zh-TW') do %>
                <%= link_to '中文', controller: controller.controller_name, action: controller.action_name, locale: 'zh-TW' %>
              <% end %>
              <%= lang_nav_item('en') do %>
                <%= link_to 'English', controller: controller.controller_name, action: controller.action_name, locale: 'en' %>
              <% end %>
            </ul>
          <% end %>
        </div>
      </li>
      <li>
        <div>
          <a href="https://www.facebook.com/bellaszakka" target="_blank">
            <i class="fa fa-facebook fa-fw"></i>
          </a>
          <a href="http://weibo.com/quoiquoistudio" target="_blank">
            <i class="fa fa-weibo fa-fw"></i>
          </a>
          <a href="http://lisabella.pixnet.net/blog" target="_blank">
            Blog
          </a>
        </div>
      </li>
      <% if user_signed_in? %>
        <li>
          <div>
            <%= link_to t('order.my'), orders_path %>
          </div>
        </li>
        <li>
          <div>
            <%= link_to t('registration.all'), registrations_path %>
          </div>
        </li>
        <li>
          <div>
            <%= link_to t('custom_order.all'), custom_orders_path %>
          </div>
        </li>
        <li>
          <div>
            <%= link_to(destroy_user_session_path, method: :delete) do %>
              <i class="fa fa-sign-out"></i>
              <%= t('signout') %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li>
          <div>
            <a href="#" data-toggle="modal" data-target="#signin-modal">
              <%= t('order.my') %>
            </a>
          </div>
        </li>
        <li>
          <div>
            <a href="#" data-toggle="modal" data-target="#signin-modal">
              <%= t('registration.all') %>
            </a>
          </div>
        </li>
        <li>
          <div>
            <a href="#" data-toggle="modal" data-target="#signin-modal">
              <%= t('custom_order.all') %>
            </a>
          </div>
        </li>
        <li>
          <div>
            <a href="#" data-toggle="modal" data-target="#signin-modal">
              <i class="fa fa-sign-in"></i>
              <%= t('signin') %>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>